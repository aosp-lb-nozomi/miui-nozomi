<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:miui="http://schemas.android.com/apk/res/miui"
    android:id="@miui:id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Maybe attach scale view and display view in Java -->
    <view
        class="miui.v5.widget.VerticalMotionFrameLayout"
        android:id="@miui:id/motion_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <view
            class="miui.v5.widget.CooperativeViewPager"
            android:id="@miui:id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            />

        <view
            class="miui.v5.widget.TabContainerLayout"
            android:id="@miui:id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            />

    </view>

</RelativeLayout>
