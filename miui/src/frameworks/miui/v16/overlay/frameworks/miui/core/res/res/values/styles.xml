<resources>
    <!-- Global Theme Styles -->
    <eat-comment />
    <style name="V5.Widget.ListView.Item.SingleLine">
        <item name="android:paddingLeft">@miui:dimen/v5_list_view_padding_horizontal</item>
        <item name="android:paddingRight">@miui:dimen/v5_list_view_padding_horizontal</item>
    </style>
    <style name="V5.Widget.ListView.Item.DoubleLine">
        <item name="android:paddingLeft">@miui:dimen/v5_list_view_padding_horizontal</item>
        <item name="android:paddingRight">@miui:dimen/v5_list_view_padding_horizontal</item>
    </style>
    <style name="V5.Widget.ListView.Item.TrebleLine">
        <item name="android:paddingLeft">@miui:dimen/v5_list_view_padding_horizontal</item>
        <item name="android:paddingRight">@miui:dimen/v5_list_view_padding_horizontal</item>
    </style>
    <style name="V5.Widget.TextView.ListSeparator">
        <item name="android:paddingLeft">@miui:dimen/v5_list_view_separator_padding_left</item>
    </style>

    <style name="V5.Widget.DropDownItem">
        <item name="android:paddingLeft">@miui:dimen/v5_list_view_padding_horizontal</item>
        <item name="android:paddingRight">@miui:dimen/v5_list_view_padding_horizontal</item>
    </style>
    <style name="V5.Widget.DropDownItem.Spinner">
        <item name="android:paddingLeft">0dip</item>
    </style>
    <style name="V5.Widget.SeekBar">
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>

    <style name="V5.Widget.VerticalSeekBar" parent="V5.Widget.SeekBar">
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>
    <style name="V5.Widget.ExpandableListView.GroupItem" parent="V5.Widget">
        <item name="android:paddingLeft">?android:attr/expandableListPreferredItemPaddingLeft</item>
    </style>
    <style name="V5.Widget.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>
    <style name="V5.Widget.ActionBar.TabBar" parent="android:Widget.ActionBar.TabBar">
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="V5.Widget.ActionBar.TabView" parent="android:Widget.ActionBar.TabView">
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>
