<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@miui:style/V5.Widget.ListView.Item.DoubleLine"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
                android:id="@+id/timezone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@miui:style/V5.TextAppearance.List.Primary" />

        <TextView
                android:id="@+id/timezone_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                style="@miui:style/V5.TextAppearance.List.Secondary" />
</LinearLayout>
