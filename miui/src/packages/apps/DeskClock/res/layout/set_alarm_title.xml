<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@miui:style/V5.Widget.EditMode.TopBar" >

    <Button
        android:id="@+id/cancel"
        style="@miui:style/V5.Widget.EditMode.TopBar.Button"
        android:layout_weight="0"
        android:text="@android:string/cancel" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/title"
            style="@miui:style/V5.TextAppearance.EditMode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/editor_title_height"
            android:gravity="center"
            android:text="@string/set_alarm" />
    </LinearLayout>

    <Button
        android:id="@+id/ok"
        style="@miui:style/V5.Widget.EditMode.TopBar.Button.Default"
        android:layout_weight="0"
        android:text="@android:string/ok" />

</LinearLayout>