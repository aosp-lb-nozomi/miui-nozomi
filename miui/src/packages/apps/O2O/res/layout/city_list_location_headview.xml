<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/change_city"
    android:layout_width="match_parent"
    android:layout_height="@dimen/city_location_height"
    android:background="@drawable/list_view_item_bg_light_header"
    android:clickable="true"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/personal_settings_item_padding_left"
    android:paddingRight="@dimen/personal_settings_item_padding_right" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/city_location_height"
        android:gravity="center_vertical"
        android:text="@string/location_cities"
        android:textAppearance="@style/TextAppearance.Title.CityListItem"
        android:textSize="@dimen/text_sub_title_size" />

    <TextView
        android:id="@+id/city_location_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/city_location_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/city_location_name_margin_right"
        android:gravity="center_vertical"
        android:text="@string/personal_change_city_default"
        android:textAppearance="@style/TextAppearance.Title.CityListItem" />

</RelativeLayout>