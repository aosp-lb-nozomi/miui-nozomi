<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.o2o.activity.view.CityListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/section_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/city_hottest_city_gridview_title_height"
        android:background="@color/city_list_background"
        android:paddingLeft="@dimen/personal_settings_item_padding_left"
        android:textAppearance="@style/TextAppearance.Title.CityListItem"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/city_location_height"
        android:background="@drawable/setting_bg_selector"
        android:paddingLeft="@dimen/personal_settings_item_padding_left"
        android:paddingRight="@dimen/personal_settings_item_padding_right" >

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/location_desc"
            android:textAppearance="@style/TextAppearance.Title.CityListItem" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_divider_line" />

</com.xiaomi.o2o.activity.view.CityListItem>