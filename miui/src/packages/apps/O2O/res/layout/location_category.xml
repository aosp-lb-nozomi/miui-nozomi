<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.o2o.activity.view.LocationCategoryView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_category"
    android:layout_width="match_parent"
    android:layout_height="@dimen/category_banner_height"
    android:background="@drawable/list_item_view_location_bg_n"
    android:clickable="true"
    android:paddingLeft="@dimen/category_padding_left"
    android:paddingRight="@dimen/category_padding_right" >

    <TextView
        android:id="@+id/location_desc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/location_desc"
        android:textAppearance="@style/TextAppearance.Title.LocationDesc" />

    <ImageView
        android:id="@+id/category_avar"
        android:layout_width="@dimen/category_avar_width"
        android:layout_height="@dimen/category_avar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/category_desc_avar"
        android:visibility="gone" />

    <TextView
        android:id="@+id/category_desc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/category_atar_margin_right"
        android:layout_toLeftOf="@id/category_avar"
        android:gravity="center"
        android:text="@string/allcategory"
        android:textAppearance="@style/TextAppearance.Title.CategoryDesc"
        android:visibility="gone" />

</com.xiaomi.o2o.activity.view.LocationCategoryView>