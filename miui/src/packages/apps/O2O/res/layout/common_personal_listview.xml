<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.xiaomi.o2o.activity.view.CommonPullListView
        android:id="@android:id/list"
        style="@style/Widget.ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/item_divider_line"
        android:dividerHeight="@dimen/common_personal_divider_height"
        android:paddingLeft="@dimen/personal_settings_padding_left"
        android:paddingRight="@dimen/personal_settings_padding_right" />

    <com.xiaomi.o2o.activity.view.EmptyLoadingView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center" />

</FrameLayout>