<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.o2o.activity.view.RecommendTailView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_divider_line" />

    <LinearLayout
        android:id="@+id/allcategory_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/choose_content_allcategory_height"
        android:layout_marginBottom="@dimen/choose_content_category_padding_top"
        android:layout_marginLeft="@dimen/choose_content_category_padding_left"
        android:layout_marginRight="@dimen/choose_content_category_padding_left"
        android:layout_marginTop="@dimen/choose_content_category_padding_top"
        android:background="@drawable/choose_all_category_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_all_item"
            android:textColor="@color/choose_content_all_category_title"
            android:textSize="@dimen/choose_type_text_size" />
    </LinearLayout>

</com.xiaomi.o2o.activity.view.RecommendTailView>