<?xml version="1.0" encoding="UTF-8"?>
<com.xiaomi.o2o.activity.view.SearchHintItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ListView.Item.SingleLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="0dip" >

    <ImageView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_history_tip" />

    <TextView
        android:id="@+id/hint"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:minHeight="@dimen/list_item_height_small"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.Title.Secondary.NoAntiColor"
        android:textSize="@dimen/text_hint_item_size" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/search_history_delete" />

</com.xiaomi.o2o.activity.view.SearchHintItem>