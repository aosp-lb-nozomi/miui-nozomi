<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banner_framelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/banner_margin_top"
    android:visibility="gone" >

    <com.xiaomi.o2o.widget.ViewPagerEx
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:layout_marginLeft="@dimen/banner_margin_left"
        android:layout_marginRight="@dimen/banner_margin_right" />

    <com.xiaomi.o2o.widget.BannerIndicator
        android:id="@+id/bannerIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/banner_indicator_margin_bottom" />

</FrameLayout>