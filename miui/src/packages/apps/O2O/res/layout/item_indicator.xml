<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/item_list_indicator_height"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_list_indicator_height"
        android:layout_marginLeft="@dimen/item_indicator_text_margin_left"
        android:layout_marginRight="@dimen/item_indicator_text_margin_right"
        android:background="@drawable/item_indicator_bottom_selector"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_indicator_text" />

</LinearLayout>