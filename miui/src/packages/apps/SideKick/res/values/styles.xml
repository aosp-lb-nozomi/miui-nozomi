    <!-- 音乐播放的标题 -->
    <style name="MusicTitleText">
        <item name="android:textSize">@dimen/music_title_text</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/black_70_transparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">@dimen/music_text_width</item>
    </style>

    <!-- 音乐列表的标题 -->
    <style name="MusicItemText">
        <item name="android:textSize">@dimen/music_item_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">@dimen/music_text_width</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!-- 音乐“查看更多”标题 -->
    <style name="MusicFindMoreText">
        <item name="android:textSize">@dimen/music_find_more_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/black_70_transparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 音乐播放时间 -->
    <style name="MusicTimeText">
        <item name="android:textColor">@color/white_30_transparent</item>
        <item name="android:textSize">@dimen/music_time_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">-3dip</item>
    </style>

    <!-- 音乐结果列表分类标题 -->
    <style name="MusicCategoryText">
        <item name="android:textColor">@color/white_30_transparent</item>
        <item name="android:textSize">@dimen/music_category_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- 音乐搜索结果的标题 -->
    <style name="MusicSearchResultText">
        <item name="android:textSize">@dimen/music_search_result_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/black_70_transparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="restaurant_text">
        <item name="android:textColor">@color/bright_foreground_light</item>
        <item name="android:textSize">@dimen/restaurant_text_size</item>
    </style>

</resources>
