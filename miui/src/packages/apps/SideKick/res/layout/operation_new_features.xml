<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_new_features"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadingEdge="none"
    android:fadingEdgeLength="0dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_new_feature_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:background="@drawable/card_selector_first"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_mark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_new_feature" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="3dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_new_feature_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_feature_desc"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/tv_new_feature_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_feature_title"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@miui:drawable/arrow_down" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_howto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>