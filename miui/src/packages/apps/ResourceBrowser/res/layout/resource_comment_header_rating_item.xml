<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/title"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:layout_weight="@integer/resource_comment_header_rating_item_title_weight"
        android:textColor="@miui:color/v5_tertiary_text_color_light"
        android:textSize="@miui:dimen/v5_text_font_size_small" >
    </TextView>

    <ProgressBar
        android:id="@+id/progress"
        style="@style/ResourceBrowser.Widget.ProgressBar.ReadOnly"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/resource_comment_padding_common_medium"
        android:layout_weight="@integer/resource_comment_header_rating_item_progress_weight" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resource_comment_padding_common_medium"
        android:gravity="right|center_vertical"
        android:singleLine="true"
        android:layout_weight="@integer/resource_comment_header_rating_item_percentage_weight"
        android:textColor="@miui:color/v5_tertiary_text_color_light"
        android:textSize="@miui:dimen/v5_text_font_size_small" >
    </TextView>

</LinearLayout>