<?xml version="1.0" encoding="UTF-8"?>
<miui.resourcebrowser.view.TabViewWithIcon xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Widget.ActionBar.TabView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="center_vertical"
    android:paddingLeft="0dip"
    android:paddingRight="0dip" >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:duplicateParentState="true"
        android:textAppearance="@miui:style/V5.Widget.ActionBar.TabText" >
    </TextView>

    <TextView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/text"
        android:background="@drawable/tab_title_icon_bg"
        android:textSize="@dimen/tab_title_corner_text_size"
        android:textColor="@color/tab_title_corner_text_color"
        android:gravity="center"
        android:singleLine="true"
        android:visibility="gone" >
    </TextView>

</miui.resourcebrowser.view.TabViewWithIcon>