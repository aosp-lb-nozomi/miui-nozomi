<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@miui:style/V5.Widget.ListView.Item.TrebleLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/resource_comment_padding_common"
    android:paddingTop="@dimen/resource_comment_padding_common" >

    <miui.resourcebrowser.view.ExpandableTextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@miui:dimen/v5_text_font_size_preference_category" />

        <TextView
            android:id="@+id/expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dip"
            android:text="@string/resource_comment_expand_full_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@miui:dimen/v5_text_font_size_preference_category" />
    </miui.resourcebrowser.view.ExpandableTextView>

    <RatingBar
        android:id="@+id/ratingbar"
        style="@style/ResourceBrowser.Widget.RatingBar.ReadOnly"
        android:layout_width="wrap_content"
        android:layout_height="23dip"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@miui:dimen/v5_text_font_size_memo" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/resource_comment_padding_list_item_horizontal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@miui:dimen/v5_text_font_size_memo" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/resource_comment_padding_list_item_horizontal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@miui:dimen/v5_text_font_size_memo" />
    </LinearLayout>

</LinearLayout>