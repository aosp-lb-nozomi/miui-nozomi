<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dip"
    android:background="@drawable/resource_operation_view_bg">

    <LinearLayout
        android:id="@+id/operationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/shareBtn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="@integer/resource_operation_view_left_buttons_weight"
            android:scaleType="centerInside"
            android:src="@drawable/resource_share" />

        <LinearLayout
            android:id="@+id/controlBtns"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/resource_operation_view_middle_buttons_weight"
            android:gravity="center">
            <Button
                android:id="@+id/downloadBtn"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/resource_detail_button_bg"
                android:textColor="@color/resource_detail_button_text_color" />
            <Button
                android:id="@+id/applyBtn"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/resource_detail_button_bg"
                android:textColor="@color/resource_detail_button_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loadingProgressBar"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/resource_operation_view_middle_buttons_weight"
            android:gravity="center"
            android:visibility="gone"
            android:paddingBottom="4dip">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/loadingMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@miui:style/V5.TextAppearance.Medium"
                android:text="@string/loading" />
        </LinearLayout>

        <ImageView
            android:id="@+id/commentBtn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="@integer/resource_operation_view_right_buttons_weight"
            android:scaleType="centerInside"
            android:src="@drawable/resource_comment" />
    </LinearLayout>

</LinearLayout>
