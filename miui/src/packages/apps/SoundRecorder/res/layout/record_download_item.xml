<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/DownloadListItemStyle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/download_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:singleLine="true"
            style="@miui:style/V5.TextAppearance.List.Primary"/>
        <miui.widget.ProgressBar
            android:id="@+id/download_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:progressBarStyleHorizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/download_size"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary"/>
            <TextView
                android:id="@+id/download_progress_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/download_control_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_download_pause"
        android:textColor="@color/btn_download_text"
        android:text="@string/start"
        android:focusable="false"
        android:layout_marginLeft="10dip"/>
    <Button
        android:id="@+id/download_control_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_download_pause"
        android:textColor="@color/btn_download_text"
        android:text="@string/pause"
        android:focusable="false"
        android:layout_marginLeft="10dip"/>
    <Button
        android:id="@+id/download_control_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_download_retry"
        android:textColor="@color/btn_download_text"
        android:text="@string/retry"
        android:focusable="false"
        android:layout_marginLeft="10dip"/>

</LinearLayout>