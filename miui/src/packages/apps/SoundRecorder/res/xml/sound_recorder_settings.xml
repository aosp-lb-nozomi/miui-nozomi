<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="pref_key_enable_led_indicator"
        android:title="@string/preference_led_indicator"
        android:summary="@string/preference_led_indicator_prompt"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:key="pref_key_enable_recording_silent_mode"
        android:title="@string/preference_silent_mode"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:key="pref_key_enable_earpiece"
        android:title="@string/preference_enable_earpiece_title"
        android:summary="@string/preference_enable_earpiece_summary"
        android:defaultValue="false" />
</PreferenceScreen>