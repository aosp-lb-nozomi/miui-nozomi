<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/power_dialog_auto_clean_memory_title"
        android:textAppearance="@miui:style/V5.TextAppearance.PreferenceList" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/power_dialog_auto_clean_memory_summary"
        android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary" />

</LinearLayout>