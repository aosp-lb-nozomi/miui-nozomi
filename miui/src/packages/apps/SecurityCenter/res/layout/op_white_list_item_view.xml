<?xml version="1.0" encoding="utf-8"?>
<com.miui.optimizecenter.whitelist.WhiteListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout style="@style/ListItemMainView" >

        <ImageView
            android:id="@+id/icon"
            style="@style/ListItemMainViewIcon"
            android:layout_marginLeft="18dip" />

        <CheckBox
            android:id="@+id/checkbox"
            style="@style/ListItemMainViewCheckbox" />

        <TextView
            android:id="@+id/title"
            style="@style/ListItemMainViewTitleText"
            android:layout_toLeftOf="@id/checkbox"
            android:layout_toRightOf="@id/icon" />
    </RelativeLayout>

</com.miui.optimizecenter.whitelist.WhiteListItemView>