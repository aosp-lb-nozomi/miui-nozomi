<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@miui:style/V5.Widget.ListView.Item.SingleLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:scaleType="fitCenter"
            android:src="@drawable/virus_scan_arrow"/>

        <TextView
            android:id="@+id/app_name"
            android:paddingLeft="5dip"
            android:textAppearance="@miui:style/V5.TextAppearance.List.Primary"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/enable"
            android:textAppearance="@miui:style/V5.TextAppearance.Button"
            android:text="@string/application_item_disable"
            style="@miui:style/V5.Widget.Button.Rect"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/enable_text"
            android:text="@string/application_item_already_permission"
            android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary"
            android:singleLine="true"
            android:textColor="@color/permission_text_color"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
</LinearLayout>
