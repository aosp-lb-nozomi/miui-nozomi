<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@miui:dimen/v5_preference_item_padding_side"
    android:paddingTop="@miui:dimen/v5_preference_item_padding_side" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@miui:drawable/v5_preference_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/power_consume_total_software"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@miui:dimen/v5_preference_item_padding_side"
            android:layout_marginRight="@miui:dimen/v5_preference_item_padding_side"
            android:text="@string/power_consume_total_software"
            android:textAppearance="@miui:style/V5.TextAppearance.PreferenceList" />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="false" />

</LinearLayout>