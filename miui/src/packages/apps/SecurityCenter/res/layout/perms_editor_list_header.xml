<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@miui:dimen/v5_list_view_double_line_height"
        android:paddingLeft="@miui:dimen/v5_list_view_padding_horizontal"
        android:paddingRight="@miui:dimen/v5_list_view_padding_horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/perm_sysopt_boost_auto_start"
            style="@style/TextAppearance.Permission.Primary" />
        <miui.widget.SlidingButton
            android:id="@+id/start_up_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@miui:dimen/v5_list_view_double_line_height"
        android:paddingLeft="@miui:dimen/v5_list_view_padding_horizontal"
        android:paddingRight="@miui:dimen/v5_list_view_padding_horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perm_privacy_app_trust"
                style="@style/TextAppearance.Permission.Primary" />
            <TextView
                android:id="@+id/trust_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perm_privacy_app_trust_summary_off"
                style="@style/TextAppearance.Permission.Secondary" />
        </LinearLayout>
        <miui.widget.SlidingButton
            android:id="@+id/creditable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>