<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="13.3dp" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/app_icon"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.Title" />

    <TextView
        android:id="@+id/app_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_toRightOf="@id/app_icon"
        android:textAppearance="@style/TextAppearance.Title.Secondary" />

    <TextView
        android:id="@+id/virus_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/app_icon"
        android:layout_below="@id/app_icon"
        android:layout_marginLeft="3.5dp"
        android:text="@string/virus_single_virus_name"
        android:textColor="@color/virus_single_title_color"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/virus_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/virus_name_title"
        android:layout_below="@id/virus_name_title"
        android:textColor="@color/virus_single_details_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/app_install_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/virus_name"
        android:layout_below="@id/virus_name"
        android:layout_marginTop="27dp"
        android:textColor="@color/virus_single_title_color"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/app_install_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/app_install_date_title"
        android:layout_below="@id/app_install_date_title"
        android:textColor="@color/virus_single_details_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/virus_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/app_install_date"
        android:layout_below="@id/app_install_date"
        android:layout_marginTop="27dp"
        android:text="@string/virus_single_virus_description"
        android:textColor="@color/virus_single_title_color"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/virus_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/virus_description_title"
        android:layout_below="@id/virus_description_title"
        android:textColor="@color/virus_single_details_color"
        android:textSize="13sp" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/virus_single_virusapk_button_clear"
        android:textSize="13sp" />

</RelativeLayout>