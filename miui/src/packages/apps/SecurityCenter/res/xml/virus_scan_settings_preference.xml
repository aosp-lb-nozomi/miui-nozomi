<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 自动更新病毒库 -->
    <PreferenceCategory android:title="@string/virus_scan_settings_title" >
        <CheckBoxPreference
            android:key="key_viurs_scan_auto_update"
            android:persistent="false"
            android:title="@string/virus_scan_link_wifi_to_update_lib" >
        </CheckBoxPreference>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/virus_scan_others_title" >

        <!-- 云查杀 -->
        <CheckBoxPreference
            android:key="key_viurs_scan_cloud"
            android:persistent="false"
            android:title="@string/virus_scan_use_cloud" >
        </CheckBoxPreference>

        <!-- 安装监控 -->
        <CheckBoxPreference
            android:key="key_viurs_scan_monitoring"
            android:persistent="false"
            android:title="@string/virus_scan_monitoring" >
        </CheckBoxPreference>
    </PreferenceCategory>

</PreferenceScreen>