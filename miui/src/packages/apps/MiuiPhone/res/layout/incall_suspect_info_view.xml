<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/suspect_info_margin_top"
        android:paddingLeft="@dimen/suspect_info_margin_left_right"
        android:paddingRight="@dimen/suspect_info_margin_left_right"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/suspect_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:background="@drawable/incall_call_card_suspect_info_bg"
            android:gravity="center"
            android:text="@string/suspect_info"
            android:textAppearance="@style/Miui.TextAppearance.SuspectInfo" />
    </LinearLayout>
</FrameLayout>
