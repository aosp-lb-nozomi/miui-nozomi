<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yellow_page_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:gravity="center_vertical"
    android:paddingBottom="2dip"
    android:background="@drawable/list_splitter_opaque" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/service_provider"
        android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary"/>

    <TextView
        android:id="@+id/yellow_page_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary" />
</RelativeLayout>