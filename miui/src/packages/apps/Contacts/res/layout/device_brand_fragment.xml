<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/device_fragment_margin_top"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/device_brand_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/device_brand_grid_margin_top"
        android:layout_marginLeft="@dimen/device_brand_grid_margin_horizontal"
        android:layout_marginRight="@dimen/device_brand_grid_margin_horizontal"
        android:gravity="center"
        android:numColumns="2"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="@dimen/device_brand_grid_spacing"
        android:verticalSpacing="@dimen/device_brand_grid_spacing" />

</LinearLayout>