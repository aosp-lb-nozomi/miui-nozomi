<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@miui:style/V5.Widget.DropDownItem">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@miui:dimen/v5_list_view_double_line_height"
        android:paddingLeft="@dimen/account_container_left_padding"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAppearance="@miui:style/V5.TextAppearance.List.Primary" />

        <TextView
            android:id="@+id/count"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary" />
    </LinearLayout>
</LinearLayout>