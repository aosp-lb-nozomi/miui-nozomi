<?xml version="1.0" encoding="utf-8"?>
<com.android.contacts.yellowpage.NavigationSubItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/yellowpage_navigation_item_icon_size"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/yellowpage_navigation_item_icon_size"
            android:layout_height="@dimen/yellowpage_navigation_item_icon_size" />

        <ImageView
            android:id="@+id/icon_mask"
            android:layout_width="@dimen/yellowpage_navigation_item_icon_size"
            android:layout_height="@dimen/yellowpage_navigation_item_icon_size"
            android:src="@drawable/yellow_page_navigatoin_item_mask" />
    </FrameLayout>

    <TextView
        android:id="@+id/name"
        style="@style/YellowPageNavigationGridItemTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

</com.android.contacts.yellowpage.NavigationSubItem>