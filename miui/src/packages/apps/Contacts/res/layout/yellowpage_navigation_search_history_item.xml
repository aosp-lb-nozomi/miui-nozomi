<?xml version="1.0" encoding="utf-8"?>
<com.android.contacts.yellowpage.SearchHintHistoryItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@miui:style/V5.Widget.ListView.Item.SingleLine"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="0dip" >

    <ImageView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/search_history_tip" />

    <TextView
        android:id="@+id/name"
        style="@style/YellowPageNavigationSearchPopUpNameStyle"
        android:layout_toLeftOf="@+id/delete"
        android:layout_toRightOf="@+id/tip" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:background="@drawable/search_history_delete" />

</com.android.contacts.yellowpage.SearchHintHistoryItem>