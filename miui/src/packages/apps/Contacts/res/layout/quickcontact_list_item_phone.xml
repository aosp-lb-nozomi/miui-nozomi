<?xml version="1.0" encoding="utf-8"?>

<com.android.contacts.detail.ActionsViewContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actions_view_container"
    style="@miui:style/V5.Widget.ListView.Item.DoubleLine"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qcb_list_item_height"
    android:layout_gravity="center_vertical"
    android:nextFocusRight="@+id/secondary_action_button"
    android:paddingLeft="@dimen/qcb_list_item_padding_left"
    android:paddingRight="@dimen/qcb_list_item_padding_right" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@android:id/text1"
            style="@style/QcbListItemText1"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@android:id/text2"
            style="@style/QcbListItemText2"
            android:textAllCaps="true" />
    </LinearLayout>

    <include layout="@layout/quickcontact_list_item_base" />

</com.android.contacts.detail.ActionsViewContainer>