<?xml version="1.0" encoding="utf-8"?>
<com.miui.home.launcher.upsidescene.EditModeBottomBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editModeBottomBar"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="bottom"
    android:visibility="invisible"
    android:background="@drawable/free_style_edit_bottom_bar_bg">
    <TextView
        android:id="@+id/editModeMoveTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:textColor="@color/free_style_bar_msg_color"
        style="@android:style/TextAppearance.Large.Inverse"
        android:text="@string/free_style_edit_move_tip"
        />
    <TextView
        android:id="@+id/editModeDraggingTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:textColor="@color/free_style_bar_msg_color"
        style="@android:style/TextAppearance.Large.Inverse"
        android:text="@string/free_style_edit_move_tip"
        />
    <miui.widget.ScreenView
        android:id="@+id/editModeFreeButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:visibility="invisible">
        <include android:id="@+id/editModeFreeButtonApp" layout="@layout/free_style_edit_bar_free_button_item" />
        <include android:id="@+id/editModeFreeButtonFolder" layout="@layout/free_style_edit_bar_free_button_item" />
        <include android:id="@+id/editModeFreeButtonDrawer" layout="@layout/free_style_edit_bar_free_button_item" />
        <include android:id="@+id/editModeFreeButtonToggle" layout="@layout/free_style_edit_bar_free_button_item" />
        <include android:id="@+id/editModeFreeButtonEmpty" layout="@layout/free_style_edit_bar_free_button_item" />
    </miui.widget.ScreenView>
    <LinearLayout
        android:id="@+id/editDragSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/dragSourceTabHost"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tabLabelShortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                style="@android:style/TextAppearance.Inverse"
                android:background="@drawable/free_style_edit_bottom_tab_left"
                android:text="@string/free_style_edit_tab_shortcut" />
            <TextView
                android:id="@+id/tabLabelFreeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                style="@android:style/TextAppearance.Inverse"
                android:background="@drawable/free_style_edit_bottom_tab_middle"
                android:text="@string/free_style_edit_tab_free_component" />
            <TextView
                android:id="@+id/tabLabelWidget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                style="@android:style/TextAppearance.Inverse"
                android:background="@drawable/free_style_edit_bottom_tab_right"
                android:text="@string/free_style_edit_tab_widget" />
        </LinearLayout>
    </LinearLayout>
</com.miui.home.launcher.upsidescene.EditModeBottomBar>