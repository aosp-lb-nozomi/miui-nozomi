<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="@drawable/clock_face"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_marginLeft="5dip"
        android:layout_gravity="center_vertical"
        />

    <View
        android:background="@drawable/clock_center"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_marginLeft="5dip"
        android:layout_gravity="center_vertical"
        />

    <ImageView android:id="@+id/clock_hour"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_marginLeft="5dip"
        android:layout_gravity="center_vertical"
        />

    <ImageView android:id="@+id/clock_minute"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_marginLeft="5dip"
        android:layout_gravity="center_vertical"
        />

    <FrameLayout
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="5dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView android:id="@+id/usage_time"
                android:layout_marginTop="4dip"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

            <TextView android:id="@+id/usage_date"
                android:textSize="10dp"
                android:layout_marginTop="14dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
    </FrameLayout>
</FrameLayout>
