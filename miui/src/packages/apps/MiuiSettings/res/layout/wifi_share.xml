<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/wifi_share_title"/>
    <TextView android:id="@+id/wifi_share_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary.Preference"
        android:textColor="@color/transparent_80_balck"
        android:textSize="15sp"
        android:lineSpacingExtra="4dip"
        android:layout_margin="20dip"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="1" />
    <TextView android:id="@+id/wifi_share_action_turn_on_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary.Preference"
        android:text="@string/wifi_share_action_turn_on_summary"
        android:textColor="@color/login_account_text_color"
        android:gravity="center"/>
    <Button android:id="@+id/wifi_share_action"
        style="@miui:style/V5.Widget.Button.PositiveWarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@miui:style/V5.TextAppearance.PreferenceList"
        android:gravity="center"
        android:layout_margin="20dip"/>
</LinearLayout>
