<!-- The title area at the top of the settings pane -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_area"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingTop="10dip"
    android:paddingBottom="10dip">

    <ImageView android:id="@+id/provider_icon"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginRight="5dip"
        android:layout_marginLeft="@miui:dimen/v5_preference_category_item_padding_side"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@miui:style/V5.TextAppearance.PreferenceList"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/provider_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary"
            android:singleLine="true"
            android:ellipsize="end"/>

    </LinearLayout>

</LinearLayout>
