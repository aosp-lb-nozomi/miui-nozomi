<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/wifi_share_add_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary.Preference"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="@string/wifi_share_add_summary"
        android:layout_marginTop="20dip"/>
    <Button android:id="@+id/wifi_share_action"
        style="@miui:style/V5.Widget.Button.NegativeWarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:textAppearance="@miui:style/V5.TextAppearance.PreferenceList"
        android:gravity="center"/>
</LinearLayout>
