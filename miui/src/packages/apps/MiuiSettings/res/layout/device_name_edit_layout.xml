<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@miui:dimen/v5_preference_screen_padding_top"
        android:paddingBottom="@miui:dimen/v5_preference_screen_padding_bottom"
        android:paddingLeft="@miui:dimen/v5_preference_item_padding_side"
        android:paddingRight="@miui:dimen/v5_preference_item_padding_side"
        android:orientation="vertical">
        <EditText
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:background="@miui:drawable/v5_group_single_item_bg_light"
            android:hint="@string/device_name_input_hint" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@miui:dimen/v5_preference_item_padding_side"
            android:text="@string/device_name_usage_point" />
    </LinearLayout>

</ScrollView>
