<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@miui:style/V5.Widget.ListView.Item.DoubleLine" >

    <TextView
        android:id="@+id/title"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textAppearance="@miui:style/V5.TextAppearance.PreferenceList"/>
    <Button
        style="@miui:style/V5.Widget.Button.Rect"
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:duplicateParentState="true"
        android:text="@string/wifi_share_upload"
        android:textAppearance="@miui:style/V5.TextAppearance.PreferenceList"
        android:clickable="false"
        android:focusable="false"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:duplicateParentState="true"
        android:textAppearance="@miui:style/V5.TextAppearance.PreferenceList"
        android:text="@string/wifi_share_upload_finish"
        android:visibility="gone" />
</LinearLayout>
