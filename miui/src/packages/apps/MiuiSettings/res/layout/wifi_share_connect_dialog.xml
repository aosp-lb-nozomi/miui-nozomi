<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wifi_share_connect_title">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@miui:style/V5.TextAppearance.PreferenceList"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/wifi_share"/>
    </FrameLayout>
    <TextView android:id="@+id/wifi_share_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary.Preference"
        android:textColor="@color/transparent_60_balck"
        android:textSize="14sp"
        android:lineSpacingExtra="3dip"/>
</LinearLayout>