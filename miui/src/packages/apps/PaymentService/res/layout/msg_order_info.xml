<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="13dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:paddingTop="15dip" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bank_info_bg" >

        <TableRow android:gravity="center_vertical" >

            <TextView
                android:gravity="right|center_vertical"
                android:text="@string/msg_telecom_order_goods_label"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/goods_info"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_medium" />
        </TableRow>

        <TableRow android:gravity="center_vertical" >

            <TextView
                android:gravity="right|center_vertical"
                android:text="@string/msg_telecom_order_denom_label"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/denom"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_medium" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/hint1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dip"
            android:src="@drawable/wait_message_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/msg_order_hint_1_1"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/msg_order_hint_1_2"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/ButtonNotice" />
</LinearLayout>