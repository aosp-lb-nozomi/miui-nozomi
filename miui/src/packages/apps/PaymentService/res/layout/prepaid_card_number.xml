<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="13dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="15dip" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@miui:drawable/v5_group_first_item_bg_light"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_item_first"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/prepaid_number_edit_hint"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_medium" />
                <EditText
                    android:id="@+id/number_edit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="0123456789 "
                    android:hint="@string/prepaid_edit_limit"
                    android:inputType="number"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:id="@+id/number_camera_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dip"
                    android:src="@drawable/camera" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@miui:drawable/v5_group_last_item_bg_light"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_item_last"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/prepaid_password_edit_hint"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_medium" />

                <EditText
                    android:id="@+id/password_edit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="0123456789 "
                    android:hint="@string/prepaid_edit_limit"
                    android:inputType="number"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:id="@+id/password_camera_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dip"
                    android:src="@drawable/camera" />

            </TableRow>
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/contentHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_color_orange"
            android:textSize="@dimen/text_size_content_hint" />

        <Button
            android:id="@+id/button_recharge"
            style="@style/ButtonNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="@string/btn_recharge_large" />

    </LinearLayout>
</ScrollView>