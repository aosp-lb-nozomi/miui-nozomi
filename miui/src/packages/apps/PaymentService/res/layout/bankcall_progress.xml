<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dip"
    android:orientation="vertical"
    android:gravity="center_horizontal" >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bank_info_bg" >
        <TableRow android:gravity="center_vertical" >
            <TextView
                android:gravity="right|center_vertical"
                android:text="@string/bankcall_merchant"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_medium" />
            <TextView
                android:gravity="left|center_vertical"
                android:text="@string/bankcall_xiaomi_company"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_medium" />
        </TableRow>

        <TableRow android:gravity="center_vertical" >
            <TextView
                android:gravity="right|center_vertical"
                android:text="@string/bankcall_denom"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_medium" />
            <TextView
                android:id="@+id/denom"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_medium" />
        </TableRow>

        <TableRow android:gravity="center_vertical" >
            <TextView
                android:gravity="right|center_vertical"
                android:text="@string/bankcall_bank_account"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_medium" />
            <TextView
                android:id="@+id/bank_account"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_medium" />
        </TableRow>
    </TableLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dip"
        android:src="@drawable/wait_phone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dip"
        android:gravity="center"
        android:textColor="@color/text_color_green"
        android:textSize="@dimen/text_size_medium"
        android:text="@string/bankcall_call_hint" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/progress_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:gravity="center"
        android:textColor="@color/text_color_red"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone" />
    <Button
        android:id="@+id/button_progress"
        style="@style/ButtonNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>