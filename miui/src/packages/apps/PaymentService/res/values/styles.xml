<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Main" parent="miui:style/V5.Theme.Light"></style>

    <style name="Theme.Dialog" parent="miui:style/V5.Theme.Light.Dialog.NoTitle"></style>

    <style name="Theme.NoDisplay" parent="miui:style/V5.Theme.NoDisplay"></style>

    <style name="Theme.Settings" parent="miui:style/V5.Theme.Light.Settings"></style>

    <style name="Theme.Translucent" parent="miui:style/V5.Theme.Light.Translucent"></style>

    <style name="Theme.NoTitle" parent="@style/Theme.Main">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.ActionBarTab" parent="@miui:style/V5.Theme.Light.ActionBar.NoTitle" />

    <style name="RadioButton">
        <item name="android:background">@miui:drawable/v5_preference_item_bg</item>
    </style>

    <style name="ButtonNormal" parent="@miui:style/V5.Widget.Button"></style>

    <style name="ButtonNotice" parent="@miui:style/V5.Widget.Button.PositiveWarn"></style>

    <style name="ListItemPrimary" parent="@miui:style/V5.TextAppearance.List.Primary" />

    <style name="ListItemSecondary" parent="@miui:style/V5.TextAppearance.List.Secondary" />

    <style name="RechargeItem" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine" />

    <style name="RecordItem" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine" />

    <style name="Spinner">
        <item name="android:background">@miui:drawable/v5_spinner_bg_light</item>
    </style>

    <style name="SecurityLockPatternView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="circleDefaultBmp">@drawable/lock_pattern_indicator_code_lock_point_area_default_holo</item>
        <item name="circleGreenBmp">@drawable/lock_pattern_indicator_code_lock_point_area_green_holo</item>
        <item name="circleRedBmp">@drawable/lock_pattern_indicator_code_lock_point_area_red_holo</item>
        <item name="pathStrokeAlpha">82</item>
        <item name="diameterFactor">0.45</item>
        <item name="paintColor">#0093ff</item>
        <item name="wrongColor">#ec2612</item>
    </style>

    <style name="AccountTextShadow" parent="@android:style/TextAppearance">
        <item name="android:shadowColor">@color/shadow_color_black_alpha_30</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">7.5</item>
    </style>

    <style name="PatternHeaderText" parent="@android:style/TextAppearance">
        <item name="android:layout_marginTop">@dimen/lockpattern_header_margin_top</item>
        <item name="android:textColor">@color/lockpattern_header_color</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="PatternFooterText" parent="@android:style/TextAppearance">
        <item name="android:layout_marginBottom">@dimen/lockpattern_footer_margin_bottom</item>
        <item name="android:textColor">@color/lockpattern_footer_color</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="DetailTitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/detail_body_color</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

</resources>
