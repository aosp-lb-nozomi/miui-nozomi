<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="YellowPageActionBarStyle" parent="@miui:style/V5.Widget.ActionBar.Large">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:height">@dimen/yellow_page_movable_action_bar_height</item>
    </style>

    <style name="YellowPageMovableActionBarLayoutStyle" parent="@miui:style/V5.Widget.ActionBarMovableLayout">
        <item name="miui:v5_over_scroll_range">@dimen/movable_action_bar_over_scroll_range</item>
        <item name="miui:v5_scroll_range">@dimen/yellow_page_tab_scroll_range</item>
        <item name="miui:v5_initial_motion">@dimen/yellow_page_tab_scroll_range</item>
    </style>

    <style name="CallLogListItemTextAppearancePrimary" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:singleLine">true</item>
    </style>

    <style name="YellowPageListItemTextAppearancePrimary" parent="@style/CallLogListItemTextAppearancePrimary"></style>

    <style name="CallLogListItemTextAppearanceSecondary" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:singleLine">true</item>
    </style>

    <style name="YellowPageListItemTextAppearanceSecondary" parent="@style/CallLogListItemTextAppearanceSecondary"></style>

    <style name="CallLogListItemMissedCallTextAppearance" parent="@style/CallLogListItemTextAppearancePrimary">
        <item name="android:textColor">@color/missed_call_text</item>
    </style>

    <style name="HightlightedTextAppearance" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:textColor">@color/yellow_page_highlight_text_color</item>
    </style>

    <style name="PaymentResultTitleTextAppearance" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:singleLine">true</item>
    </style>

    <style name="PaymentResultSummaryTextAppearance" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:singleLine">true</item>
    </style>

    <style name="PaymentLabel" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/payment_label_height</item>
        <item name="android:layout_marginLeft">@dimen/payment_label_margin</item>
        <item name="android:layout_marginRight">@dimen/payment_label_margin</item>
        <item name="android:paddingBottom">@dimen/payment_vertical_margin</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!-- Widget Style -->
    <style name="Widget" parent="@miui:style/V5.Widget" />

    <style name="Widget.ImageView" />

    <style name="Widget.ImageView.Thumbnail">
        <item name="android:layout_width">@miui:dimen/v5_list_view_double_line_photo_size</item>
        <item name="android:layout_height">@miui:dimen/v5_list_view_double_line_photo_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Widget.Button" parent="@miui:style/V5.Widget.Button" />

    <style name="Widget.Button.Retry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/large_button_height</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.TextView" parent="@miui:style/V5.Widget.TextView" />

    <style name="Widget.TextView.DialogMessage">
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Widget.Button.Text" parent="@miui:style/V5.TextAppearance.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/loading_progress_view_button_text_margin</item>
    </style>

    <style name="Widget.Button.PositiveWarn">
        <item name="android:background">@drawable/positive_warn_button_bg</item>
        <item name="android:textAppearance">@miui:style/V5.TextAppearance.Button.Warn</item>
        <item name="android:textColor">@miui:color/v5_button_text_dark</item>
    </style>

    <style name="ExpressInquiryIndicationTextStyle" parent="@miui:style/V5.TextAppearance.PreferenceCategory">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/express_inquiry_fragment_indication_text_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/express_inquiry_fragment_indication_text_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/express_inquiry_fragment_indication_text_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/express_inquiry_fragment_indication_text_padding_vertical</item>
    </style>

    <style name="RechargeOrderListPendingItemStyle">
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">@miui:dimen/v5_list_view_treble_line_height</item>
        <item name="android:minHeight">@miui:dimen/v5_list_view_treble_line_height</item>
        <item name="android:paddingLeft">@miui:dimen/v5_list_view_padding_horizontal</item>
        <item name="android:paddingRight">@miui:dimen/v5_list_view_padding_horizontal</item>
    </style>

    <style name="YellowPagePickerSectionHeaderTextStyle" parent="@miui:style/V5.TextAppearance.Label">
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/yellow_page_picker_section_header_text_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/yellow_page_picker_section_header_text_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/yellow_page_picker_section_header_text_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/yellow_page_picker_section_header_text_padding_vertical</item>
        <item name="android:background">@miui:drawable/v5_list_view_section_item_bg_light</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ExpressEditText" parent="@miui:style/V5.Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/express_inquiry_edit_text_margin_left</item>
        <item name="android:background">@null</item>
        <item name="android:drawableRight">@miui:drawable/v5_edit_text_search_clear_btn_light</item>
        <item name="android:paddingRight">@dimen/express_inquiry_edit_text_padding_right</item>
    </style>

    <style name="BalanceInquiryDialogTitleStyle" parent="@miui:style/V5.TextAppearance.DialogTitle">
        <item name="android:padding">@dimen/balance_inquiry_dialog_title_padding</item>
    </style>

    <style name="BalanceInquiryDialogHintStyle" parent="@miui:style/V5.TextAppearance.DialogTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">@dimen/balance_inquiry_dialog_hint_margin</item>
    </style>

    <style name="InquiryHistoryListItemStyle" parent="@miui:style/V5.Widget.ListView">
        <item name="android:background">@miui:drawable/v5_list_view_item_bg_light</item>
        <item name="android:paddingLeft">@miui:dimen/v5_list_view_padding_horizontal</item>
        <item name="android:paddingRight">@miui:dimen/v5_list_view_padding_horizontal</item>
        <item name="android:layout_height">@miui:dimen/v5_list_view_double_line_height</item>
        <item name="android:minHeight">@miui:dimen/v5_list_view_double_line_height</item>
    </style>

    <style name="SearchResultListItemStyle" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine">
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="ExpressAddressFieldsStsyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/express_text_field_height</item>
        <item name="android:layout_marginBottom">@dimen/express_address_fields_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/express_address_fields_margin_vertical</item>
    </style>

    <style name="ExpressDetailedAddressStyle" parent="@style/ExpressEditText">
        <item name="android:drawableRight">@null</item>
        <item name="android:gravity">left|top</item>
        <item name="android:hint">@string/express_detailed_address</item>
        <item name="android:inputType">text|textMultiLine</item>
        <item name="android:maxHeight">@dimen/express_detailed_address_edit_text_height</item>
        <item name="android:minHeight">@dimen/express_detailed_address_edit_text_height</item>
        <item name="android:minLines">@integer/express_detailed_address_lines</item>
        <item name="android:paddingBottom">@dimen/express_detailed_address_edit_text_padding</item>
        <item name="android:paddingRight">@dimen/express_detailed_address_edit_text_padding</item>
        <item name="android:paddingTop">@dimen/express_detailed_address_edit_text_padding</item>
    </style>

    <style name="SendExpressAddressViewContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/express_send_express_fragment_view_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/express_send_express_fragment_view_margin_top</item>
        <item name="android:background">@miui:drawable/v5_preference_item_bg</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>