<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sim_card_picker_dlg_icon_and_text_margin"
        android:gravity="center_horizontal"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sim_card_picker_dlg_margin_bottom"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon_sim_card1"
                android:layout_width="@dimen/sim_card_icon_size"
                android:layout_height="@dimen/sim_card_icon_size"
                android:layout_marginBottom="@dimen/sim_card_picker_dlg_icon_and_text_margin" />

            <TextView
                android:id="@+id/text_sim_card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@miui:style/V5.TextAppearance.List.Primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon_sim_card2"
                android:layout_width="@dimen/sim_card_icon_size"
                android:layout_height="@dimen/sim_card_icon_size"
                android:layout_marginBottom="@dimen/sim_card_picker_dlg_icon_and_text_margin" />

            <TextView
                android:id="@+id/text_sim_card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@miui:style/V5.TextAppearance.List.Primary" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>