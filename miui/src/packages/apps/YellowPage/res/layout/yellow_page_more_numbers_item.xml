<?xml version="1.0" encoding="utf-8"?>
<com.miui.yellowpage.ui.YellowPageMoreNumberItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        style="@style/YellowPageListItemTextAppearancePrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_page_list_item_bg"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/yellow_page_detail_list_item_padding_vertical"
        android:paddingRight="@dimen/yellow_page_detail_list_item_padding_horizontal"
        android:paddingTop="@dimen/yellow_page_detail_list_item_padding_vertical"
        android:text="@string/all_numbers" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/indication"
            style="@style/YellowPageListItemTextAppearanceSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/indication_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:duplicateParentState="false"
            android:paddingRight="@dimen/yellow_page_more_numbers_item_padding_right"
            android:scaleType="centerInside"
            android:src="@miui:drawable/v5_arrow_right" />
    </LinearLayout>

</com.miui.yellowpage.ui.YellowPageMoreNumberItem>