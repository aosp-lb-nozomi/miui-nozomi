<?xml version="1.0" encoding="utf-8"?>
<com.miui.yellowpage.ui.ExpressAddressListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@miui:drawable/v5_preference_item_bg"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="false" />

    <com.miui.yellowpage.ui.ExpressAddressView
        android:id="@+id/address_view"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/express_list_item_address_view_margin"
        android:layout_marginTop="@dimen/express_list_item_address_view_margin"
        android:layout_weight="1" />

    <Button
        android:id="@+id/detail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@miui:drawable/v5_btn_next_light" />

</com.miui.yellowpage.ui.ExpressAddressListItem>