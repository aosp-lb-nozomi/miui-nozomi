<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/express_button_margin_horizontal" >

        <include layout="@layout/express_address_fields" />
    </LinearLayout>

    <Button
        android:id="@+id/next_step"
        style="@miui:style/V5.Widget.Button.PositiveWarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/express_button_margin_horizontal"
        android:layout_marginRight="@dimen/express_button_margin_horizontal"
        android:text="@string/express_next_step" />

</LinearLayout>