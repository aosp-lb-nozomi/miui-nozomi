<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_view" >

    <Button
        android:id="@+id/cancel"
        style="@miui:style/V5.Widget.EditMode.TopBar.Button"
        android:layout_marginLeft="@dimen/express_title_view_button_margin_horizontal"
        android:layout_weight="0"
        android:text="@android:string/cancel" />

    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/title"
            style="@miui:style/V5.TextAppearance.EditMode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" />
    </LinearLayout>

    <Button
        android:id="@+id/ok"
        style="@miui:style/V5.Widget.EditMode.TopBar.Button.Default"
        android:layout_marginRight="@dimen/express_title_view_button_margin_horizontal"
        android:layout_weight="0"
        android:text="@android:string/ok" />

</LinearLayout>