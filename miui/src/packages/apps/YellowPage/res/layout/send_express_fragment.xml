<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/express_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/express_send_express_fragment_view_margin_bottom" />

    <TextView
        android:id="@+id/sender_label"
        style="@miui:style/V5.TextAppearance.PreferenceCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/express_label_margin"
        android:text="@string/express_sender" />

    <LinearLayout
        android:id="@+id/sender_container"
        style="@style/SendExpressAddressViewContainerStyle" >

        <com.miui.yellowpage.ui.ExpressAddressView
            android:id="@+id/sender"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/express_button_margin_horizontal"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/express_send_express_fragment_arrow_margin"
            android:src="@miui:drawable/v5_arrow_right" />
    </LinearLayout>

    <TextView
        android:id="@+id/addressee_label"
        style="@miui:style/V5.TextAppearance.PreferenceCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/express_label_margin"
        android:text="@string/express_addressee" />

    <LinearLayout
        android:id="@+id/addressee_container"
        style="@style/SendExpressAddressViewContainerStyle" >

        <com.miui.yellowpage.ui.ExpressAddressView
            android:id="@+id/addressee"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/express_button_margin_horizontal"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/express_send_express_fragment_arrow_margin"
            android:src="@miui:drawable/v5_arrow_right" />
    </LinearLayout>

    <Button
        android:id="@+id/create_order"
        style="@miui:style/V5.Widget.Button.PositiveWarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/express_button_margin_horizontal"
        android:layout_marginRight="@dimen/express_button_margin_horizontal"
        android:text="@string/express_create_order" />

</LinearLayout>