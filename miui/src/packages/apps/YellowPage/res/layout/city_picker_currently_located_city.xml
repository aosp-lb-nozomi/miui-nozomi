<?xml version="1.0" encoding="utf-8"?>
<com.miui.yellowpage.ui.CityPickerLocatedCityItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/section_header"
        style="@style/YellowPagePickerSectionHeaderTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/navigation_search_automatically_positioned_city" />

    <RelativeLayout
        android:id="@+id/content"
        style="@miui:style/V5.Widget.ListView.Item.SingleLine"
        android:layout_width="match_parent" >

        <TextView
            android:id="@+id/city_name"
            style="@miui:style/V5.TextAppearance.List.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/progress"
            android:singleLine="true"
            android:text="@string/navigation_search_positioning" />

        <miui.widget.AnimatedImageView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/ic_list_sync_anim" />
    </RelativeLayout>

</com.miui.yellowpage.ui.CityPickerLocatedCityItem>