<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/source_info_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/express_inquiry_source_info_margin_top"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="gone" >

    <TextView
        android:id="@+id/source_name_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/express_inquiry_data_owner_prefix"
        android:textSize="@dimen/express_inquiry_provider_name_size" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/source_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/express_inquiry_provider_name_size" />

        <ImageView
            android:id="@+id/source_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/express_inquiry_provider_pic_margin_horizontal"
            android:layout_marginRight="@dimen/express_inquiry_provider_pic_margin_horizontal"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/source_name_suffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/express_inquiry_data_owner_suffix"
        android:textSize="@dimen/express_inquiry_provider_name_size" />

</LinearLayout>