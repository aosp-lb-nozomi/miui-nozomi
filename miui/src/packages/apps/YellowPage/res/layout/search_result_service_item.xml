<?xml version="1.0" encoding="utf-8"?>
<com.miui.yellowpage.ui.SearchResultServiceItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SearchResultListItemStyle">

    <ImageView
        android:id="@+id/thumbnail"
        style="@style/Widget.ImageView.Thumbnail"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_toLeftOf="@+id/indicator"
        android:layout_toRightOf="@+id/thumbnail"
        android:orientation="vertical"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/name"
            style="@miui:style/V5.TextAppearance.List.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:id="@+id/description"
            style="@miui:style/V5.TextAppearance.List.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@miui:drawable/v5_arrow_right" />

</com.miui.yellowpage.ui.SearchResultServiceItem>