<?xml version="1.0" encoding="utf-8"?>
<com.miui.yellowpage.ui.AllNumbersListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@miui:drawable/v5_list_view_item_bg_light" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/yellow_page_detail_list_item_padding_vertical"
        android:paddingLeft="@dimen/yellow_page_all_numbers_list_item_padding_left"
        android:paddingRight="@dimen/yellow_page_detail_list_item_padding_horizontal"
        android:paddingTop="@dimen/yellow_page_detail_list_item_padding_vertical" >

        <TextView
            android:id="@+id/number"
            style="@style/YellowPageListItemTextAppearancePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tag"
            style="@style/YellowPageListItemTextAppearanceSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:duplicateParentState="false"
        android:scaleType="centerInside"
        android:src="@drawable/ic_send_sms" />

</com.miui.yellowpage.ui.AllNumbersListItem>