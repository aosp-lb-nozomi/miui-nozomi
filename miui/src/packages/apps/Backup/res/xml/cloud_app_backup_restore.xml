<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:miui="http://schemas.android.com/apk/res/com.miui.player"
    android:title="@string/cloud_app_backup_title" >

    <PreferenceCategory
        android:key="settings_category">
        <CheckBoxPreference
            android:key="backup_enable"
            android:title="@string/cloud_app_backup_title" 
            android:summary="@string/cloud_app_backup_summary"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="just_in_current_device"
            android:title="@string/cloud_app_just_show_in_current_device" />
    </PreferenceCategory>

    <PreferenceCategory 
        android:key="my_apps"
        android:title="@string/cloud_app_mine" >
    </PreferenceCategory>

    <PreferenceCategory
        android:key="function_summary" 
        android:title="@string/cloud_app_function_summary"/>
</PreferenceScreen>
