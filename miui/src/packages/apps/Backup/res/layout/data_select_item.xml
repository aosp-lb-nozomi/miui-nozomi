<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@miui:style/V5.Widget.ListView.Item.DoubleLine"
    android:paddingLeft="14dip"
    android:paddingRight="4dip"
    android:gravity="center_vertical"
    android:layout_width="match_parent">

    <CheckBox
        android:id="@+id/data_item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dip"
        android:focusable="false"
    />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@miui:style/V5.TextAppearance.List.Primary"
                android:id="@+id/data_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            />
            <TextView
                android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary"
                android:id="@+id/data_count"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            />
        </LinearLayout>
        <TextView
            android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary"
            android:id="@+id/data_desp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unknown_hint"
        />
    </LinearLayout>

    <Button
        android:id="@+id/data_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:background="@miui:drawable/v5_btn_next_light"
        android:gravity="center_vertical"
        android:focusable="false"
    />
</LinearLayout>
