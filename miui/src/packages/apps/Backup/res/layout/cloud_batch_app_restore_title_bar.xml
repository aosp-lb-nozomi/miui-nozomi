<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:gravity="center_vertical"
    android:background="@drawable/miui_header_panel_open_bg">
    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" 
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAppearance="@miui:style/V5.TextAppearance.PreferenceList" />
    <FrameLayout
        android:id="@+id/header_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/miui_header_expand_open_bg" />
</LinearLayout>
