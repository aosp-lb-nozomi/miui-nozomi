<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="GuideTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/GuideActionBarStyle</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="GuideActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions" />
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextAppearance" >
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.GuideDetailHeader" >
        <item name="android:textSize">@dimen/text_font_size_large</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:shadowColor">@color/primary_text_color_shadow</item>
    </style>

    <style name="TextAppearance.GuideDetailFooter" >
        <item name="android:textSize">@dimen/text_font_size_medium</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:shadowColor">@color/secondary_text_color_shadow</item>
    </style>

    <style name="TextAppearance.GuideListTitle" >
        <item name="android:textSize">@dimen/text_font_size_large</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:shadowColor">@color/primary_text_color_shadow</item>
    </style>

    <style name="TextAppearance.GuideListReadStatus" >
        <item name="android:textSize">@dimen/text_font_size_medium</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:shadowColor">@color/secondary_text_color_shadow</item>
    </style>

    <style name="TextAppearance.GuideListItemName" >
        <item name="android:textSize">@dimen/text_font_size_medium</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:shadowColor">@color/primary_text_color_shadow</item>
    </style>

    <style name="ProgressBarReadStatus" parent="android:style/Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>
</resources>