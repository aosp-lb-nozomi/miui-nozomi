<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <TextView android:id="@+id/title_bar_title"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:textColor="#000000" android:ellipsize="end"
    android:singleLine="true" />

  <com.android.browser.readmode.BatteryTextView
    android:id="@+id/title_bar_energy" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:textColor="#000000"
    android:gravity="center" android:textStyle="bold" android:textSize="6sp" />

  <TextView android:id="@+id/title_bar_time"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:textColor="#000000" />

</merge>