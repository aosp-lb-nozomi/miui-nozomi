<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="wrap_content"
  android:orientation="vertical" android:showDividers="middle"
  android:id="@+id/content">

  <TextView android:id="@+id/theme_select_title"
    android:layout_width="match_parent" android:layout_height="57dip"
    android:gravity="center" android:text="@string/menu_theme_setting"
    android:textColor="#000000" android:textStyle="bold" android:textSize="17sp" />

  <FrameLayout android:id="@+id/theme_select_content"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:gravity="center" />

  <LinearLayout android:layout_width="match_parent"
    android:layout_height="100dip" android:gravity="center">
    <Button android:id="@+id/theme_select_submit_btn" style="@style/ReadmodeButton"
      android:text="@android:string/ok" />
  </LinearLayout>
</LinearLayout>