<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="55dip"
  android:orientation="horizontal" android:gravity="center_vertical">

  <!-- 字体变小 -->

  <ImageView android:id="@+id/action_textsize_smaller"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@null" android:src="@drawable/action_textsize_smaller" />


  <SeekBar android:id="@+id/fontsize_seekbar"
    android:layout_width="0dip" android:layout_height="wrap_content"
    android:layout_weight="1.0" android:max="100" android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip" />

  <!-- 字体变大 -->

  <ImageView android:id="@+id/action_textsize_bigger"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@null" android:src="@drawable/action_textsize_bigger" />

</LinearLayout>