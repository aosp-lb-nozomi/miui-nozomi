<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/action_readmode_bookshelf_bg"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/action_readmode_bookshelf_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/action_readmode_bookshelf_back" />

    <ImageView
        android:id="@+id/action_readmode_bookshelf_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/action_readmode_bookshelf_refresh" />

    <ImageButton
        android:id="@+id/action_readmode_bookshelf_tabnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/action_tabs"/>

    <ImageView
        android:id="@+id/action_readmode_bookshelf_nofull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/action_readmode_bookshelf_nofull" />

</LinearLayout>