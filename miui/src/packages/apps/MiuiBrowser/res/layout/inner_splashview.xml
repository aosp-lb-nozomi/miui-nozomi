<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <miui.browser.webapps.views.HeartImageView
    android:id="@+id/splashview_icon_imageview" style="@style/WebApp.Icon.Large" />

  <ProgressBar android:id="@+id/splashview_loading"
    android:layout_width="30dip" android:layout_height="30dip" />
  <TextView android:id="@+id/splashview_appname"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    style="@style/WebApp.Title" android:text="@string/webapp_app_name" />
  <TextView android:id="@+id/splashview_loadingtext"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    style="@style/WebApp.SplashView.LoadingText" android:text="@string/webapp_splashview_loading" />
  <TextView android:id="@+id/splashview_copyright"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    style="@style/WebApp.SplashView.CopyRightText" />
</merge>
