<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <TextView android:id="@+id/footer_message" style="@style/ReadmodeFooterTextView"
    android:text="@string/readmode_reach_last_page" />

  <ProgressBar android:id="@+id/footer_bar"
    android:layout_width="wrap_content" android:layout_height="wrap_content" />
  <LinearLayout android:id="@+id/login_view"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView android:id="@+id/login_message" style="@style/ReadmodeFooterTextView"
      android:text="@string/readmode_login_message" />
    <Button android:id="@+id/login_btn" style="@style/ReadmodeButton"
      android:text="@string/readmode_login" />
  </LinearLayout>
  <LinearLayout android:id="@+id/pay_view"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView android:id="@+id/pay_message" style="@style/ReadmodeFooterTextView"
      android:text="@string/readmode_pay_message" />
    <Button android:id="@+id/pay_btn" style="@style/ReadmodeButton"
      android:text="@string/readmode_pay" />
  </LinearLayout>
  <LinearLayout android:id="@+id/recommend_view"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView android:id="@+id/recommend_message" style="@style/ReadmodeFooterTextView"
      android:text="@string/readmode_recommend_message" />
    <Button android:id="@+id/recommend_btn" style="@style/ReadmodeButton"
      android:text="@string/readmode_recommend" />
  </LinearLayout>
  <LinearLayout android:id="@+id/footer_error"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView  style="@style/ReadmodeFooterTextView"
      android:text="@string/readmode_page_load_error" />
    <Button android:id="@+id/refresh_btn" style="@style/ReadmodeButton"
      android:text="@string/readmode_refresh" />
  </LinearLayout>
</merge>