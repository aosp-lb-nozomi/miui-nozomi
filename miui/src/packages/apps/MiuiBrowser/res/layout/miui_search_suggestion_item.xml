<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/suggestion_item" android:layout_width="match_parent"
  android:layout_height="wrap_content" android:orientation="horizontal"
  android:gravity="center_vertical" android:baselineAligned="false"
  android:paddingLeft="14dip"
  android:paddingTop="10dip"
  android:paddingBottom="10dip"
  android:descendantFocusability="blocksDescendants"
  android:background="#00000000">
  <ImageView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:src="@drawable/miui_search_suggest_icon"/>
  <TextView android:id="@+id/suggetion_message" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="10dip"
    android:paddingRight="10dip" style="@style/MiuiSearch.SuggestItemTextStyle" />

</LinearLayout>
