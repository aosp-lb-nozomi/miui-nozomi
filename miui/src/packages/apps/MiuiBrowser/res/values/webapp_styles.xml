<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="WebApp" />

  <style name="WebApp.Title">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">#A2000000</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="WebApp.SplashView">
    <item name="splash_icon_top">180dip</item>
    <item name="splash_appname_relative_top">10dip</item>
    <item name="loading_relative_bottom">10dip</item>
    <item name="splash_copyright_bottom">20dip</item>
    <item name="loading_text_bottom">220dip</item>
  </style>

  <style name="WebApp.SplashView.WebAppCenter">
      <item name="heart_animation">false</item>
  </style>

  <style name="WebApp.SplashView.WebApp">
      <item name="heart_animation">true</item>
  </style>

  <style name="WebApp.SplashView.LoadingText">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#32000000</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="WebApp.SplashView.CopyRightText">
    <item name="android:textSize">10sp</item>
    <item name="android:textColor">#30000000</item>
    <item name="android:textStyle">bold</item>
  </style>


  <style name="WebApp.BottomBar" />

  <style name="WebApp.BottomBar.Menu">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="WebApp.BottomBar.Text">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">55dip</item>
    <item name="android:layout_weight">1.0</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:paddingLeft">20dip</item>
    <item name="android:textSize">17sp</item>
    <item name="android:textColor">@color/webapp_bottom_bar_text_color</item>
  </style>

  <style name="WebApp.AlertDialog" />

  <style name="WebApp.AlertDialog.Title" parent="WebApp.Title">
    <item name="android:gravity">center</item>
    <item name="android:layout_height">60dip</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="WebApp.Icon">
    <item name="android:background">@android:color/white</item>
    <item name="round_x">10dip</item>
    <item name="round_y">10dip</item>
    <item name="image_width">50dip</item>
    <item name="image_height">50dip</item>
  </style>
  <style name="WebApp.Icon.Large">
    <item name="android:layout_width">70dip</item>
    <item name="android:layout_height">70dip</item>
    <item name="android:src">@drawable/webapp_icon</item>
  </style>

  <style name="WebApp.Icon.Small">
    <item name="android:layout_width">40dip</item>
    <item name="android:layout_height">40dip</item>
    <item name="android:src">@drawable/webapp_icon</item>
  </style>
  <eat-comment />
  <style name="WebApp.AddToDeskPopDialog" />

  <style name="WebApp.AddToDeskPopDialog.AddNumberText">
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">#e87941</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">11sp</item>
  </style>

  <style name="WebApp.AddToDeskPopDialog.AddNumberAppend">
    <item name="android:ellipsize">end</item>
    <item name="android:text">@string/webapp_addtodeskpop_append</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">11sp</item>
  </style>

  <style name="WebApp.AddToDeskPopDialog.AppName">
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="WebApp.AddToDeskPopDialog.AppDescription">
    <item name="android:ellipsize">end</item>
    <item name="android:shadowRadius">20</item>
    <item name="android:maxLines">2</item>
    <item name="android:textSize">12sp</item>
    <item name="android:shadowColor">@android:color/white</item>
    <item name="android:shadowDx">1</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowDy">1</item>
  </style>


  <eat-comment />
  <style name="WebApp.AddToDeskPopLayout" />
  <style name="WebApp.AddToDeskPopLayout.AddNumberText">
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">#e87941</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">11sp</item>
  </style>
  <style name="WebApp.AddToDeskPopLayout.AddNumberAppend">
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">#bdbdbd</item>
    <item name="android:text">@string/webapp_addtodeskpop_append</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">11sp</item>
  </style>
  <style name="WebApp.AddToDeskPopLayout.AppName">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@android:color/white</item>
  </style>
  <style name="WebApp.AddToDeskPopLayout.AppDescription">
    <item name="android:ellipsize">end</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="WebApp.AddToDeskPopLayout.Button">
    <item name="android:layout_width">70dip</item>
    <item name="android:layout_height">35dip</item>
    <item name="android:textSize">11sp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:text">@string/webapp_add_to_desktop</item>
    <item name="android:background">@drawable/webapp_popview_btn_bg</item>
  </style>

  <style name="WebApp.FlingLayout">
    <item name="remove_src">@drawable/webapp_popview_close_btn</item>
    <item name="android:paddingLeft">10dip</item>
    <item name="android:paddingRight">10dip</item>
  </style>

  <style name="WebApp.Animation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/webapp_activity_in</item>
  </style>

</resources>