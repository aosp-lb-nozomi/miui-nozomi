<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MiuiSearch"/>

    <style name="MiuiSearch.SearchListItemTextStyle">
        <item name="android:textColor">@color/miuisearch_searchengine_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="MiuiSearch.SuggestItemTextStyle" parent="MiuiSearch.SearchListItemTextStyle">
        <item name="android:textColor">@color/miuisearch_suggest_text_color</item>
    </style>

    <style name="MiuiSearch.MiuiSearchEngineLayoutStyle" >
        <item name="column_number">3</item>
        <item name="splitline_color">@color/miuisearch_divider</item>
    </style>

</resources>
