<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dialog_Fullscreen">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="HomeButtonStytle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <style name="FileViewToolbarButtonStytle">
        <item name="android:padding">10dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CategoryButtonStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/category_button</item>
    </style>

    <style name="CategoryButtonIconStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">2dip</item>
    </style>

    <style name="CategoryButtonTextStyle" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="CategoryButtonCountTextStyle" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/category_default_number_text</item>
    </style>

    <style name="InformationTextStyle" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:textSize">14dip</item>
    </style>

    <style name="CategoryLegendStyle" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">10dip</item>
        <item name="android:drawablePadding">3dip</item>
    </style>

    <style name="CategoryLegendGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">4dip</item>
    </style>

    <style name="InformationDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/popup_bg</item>
    </style>

    <style name="ActionMenuItemTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@miui:drawable/android_item_background_holo_light</item>
    </style>

    <style name="ActionMenuBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bottom_bar_bg_p</item>
    </style>

    <style name="FileExplorerTheme" parent="@miui:style/V5.Theme.Light.ActionBar.NoTitle">
        <item name="miui:v5_action_bar_tab">true</item>
    </style>

    <style name="FileCleanupThemeActionBar" parent="@miui:V5.Widget.ActionBar">
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <style name="FileCleanupTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:actionBarStyle">@style/FileCleanupThemeActionBar</item>
    </style>

    <style name="ActionBarStyle.ActionBarTitle" parent="@miui:V5.Widget.ActionBar">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>

    <style name="SearchActionBarStyle" parent="@miui:V5.Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
    </style>

    <style name="FileExplorerSearchTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:actionBarStyle">@style/SearchActionBarStyle</item>
    </style>

    <style name="FileExplorerThemeWithTitle" parent="@miui:style/V5.Theme.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle.ActionBarTitle</item>
    </style>

    <style name="FtpMessageStyle">
        <item name="android:textSize">15dip</item>
        <item name="android:layout_width">225dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">6dip</item>
    </style>

    <style name="SupplyMessageStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/kuaipan_supply_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">30dip</item>
        <item name="android:layout_marginBottom">16dip</item>
        <item name="android:drawablePadding">5dip</item>
    </style>

    <style name="KuaipanIntroduceMessageStyle" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="KuaipanIntroduceMessageSecondaryStyle" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListItemStyle" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine">
        <item name="android:paddingLeft">@dimen/list_item_padding_left</item>
        <item name="android:paddingRight">@dimen/list_item_padding_right</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PathRefreshProgressBar" parent="@miui:style/V5.Widget.ProgressBar">
        <item name="android:background">@drawable/v5_progress_bar_bg</item>
        <item name="android:indeterminateDrawable">@drawable/v5_progress_bar_ani</item>
        <item name="android:minWidth">27dip</item>
        <item name="android:maxWidth">27dip</item>
        <item name="android:minHeight">27dip</item>
        <item name="android:maxHeight">27dip</item>
    </style>

    <style name="NavigationBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/path_gallery_bg</item>
        <item name="android:paddingRight">@dimen/progress_paddingright</item>
    </style>

    <style name="V5TextAppearanceYellow" parent="@miui:style/V5.TextAppearance.Button">
        <item name="android:textColor">@color/text_color_yellow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="V5PathItemTextStyle" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:textColor">@color/path_item_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FileIconStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">@dimen/file_icon_padding</item>
        <item name="android:maxHeight">@dimen/file_icon_height</item>
        <item name="android:maxWidth">@dimen/file_icon_width</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="GarbageCleanupCompleteIndication">
        <item name="android:layout_width">@dimen/GarbageCleanupCompleteIndicationWidth</item>
        <item name="android:layout_height">@dimen/GarbageCleanupCompleteIndicationHeight</item>
    </style>

    <style name="GarbageCleanupCleanupStatusStyle">
        <item name="android:layout_width">@dimen/GarbageCleanupCleanupStatusWidth</item>
        <item name="android:layout_height">@dimen/GarbageCleanupCleanupStatusHeight</item>
    </style>

    <style name="GarbageCleanupCollapseStyle">
        <item name="android:layout_width">@dimen/GarbageCleanupCollapseWidth</item>
        <item name="android:layout_height">@dimen/GarbageCleanupCollapseHeight</item>
    </style>

    <style name="CleanupIndicationStyle">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_large</item>
        <item name="android:textColor">@color/cleanup_indication_color</item>
        <item name="android:shadowColor">@color/cleanup_indication_shadow_color</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:paddingBottom">@dimen/file_cleanup_activity_imagetextview_marginBottom</item>
    </style>

    <style name="PreferenceInformation" parent="miui:style/V5.Preference.Information">
        <item name="android:enabled">true</item>
    </style>

    <style name="AppGarbageItemStyle" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine">
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>
</resources>
