<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/file_browse_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/navigation_bar"
            style="@style/NavigationBarStyle">
        <include layout="@layout/path_gallery"/>
        <ProgressBar
                android:id="@+id/refresh_progress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"
                style="@style/PathRefreshProgressBar"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">
        <com.android.fileexplorer.view.EditableListView
                android:id="@android:id/list"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <com.android.fileexplorer.view.EditableListView
                android:id="@+id/favorite_list"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/empty_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">
            <ImageView
                    android:src="@drawable/empty_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/empty_message"
                    android:layout_width="wrap_content"
                    android:text="@string/no_file"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    style="@miui:style/V5.TextAppearance.List.Secondary"/>
        </LinearLayout>

        <com.android.fileexplorer.view.PathGallery
                android:id="@+id/dropdown_navigation"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="left">
            <LinearLayout
                    android:id="@+id/scroll_container"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
            </LinearLayout>
        </com.android.fileexplorer.view.PathGallery>

        <LinearLayout
                android:id="@+id/sd_not_available_page"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">
            <ImageView
                    android:src="@drawable/sd_not_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/enable_sd_card"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    style="@miui:style/V5.TextAppearance.List.Secondary"/>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/category_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <!-- category buttons -->
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/category_panel_paddingtop"
                    android:paddingLeft="@dimen/category_panel_paddingtleft"
                    android:paddingRight="@dimen/category_panel_paddingtright">

                <LinearLayout
                        android:id="@+id/category_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                        <LinearLayout
                                android:id="@+id/category_music"
                                style="@style/CategoryButtonStyle">
                            <ImageView
                                    android:src="@drawable/category_icon_music"
                                    style="@style/CategoryButtonIconStyle"/>
                            <TextView
                                    android:text="@string/category_music"
                                    style="@style/CategoryButtonTextStyle"/>
                            <TextView
                                    android:id="@+id/category_music_count"
                                    style="@style/CategoryButtonCountTextStyle"/>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/category_video"
                                style="@style/CategoryButtonStyle">
                            <ImageView
                                    android:src="@drawable/category_icon_video"
                                    style="@style/CategoryButtonIconStyle"/>
                            <TextView
                                    android:text="@string/category_video"
                                    style="@style/CategoryButtonTextStyle"/>
                            <TextView
                                    android:id="@+id/category_video_count"
                                    style="@style/CategoryButtonCountTextStyle"/>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/category_picture"
                                style="@style/CategoryButtonStyle">
                            <ImageView
                                    android:src="@drawable/category_icon_picture"
                                    style="@style/CategoryButtonIconStyle"/>
                            <TextView
                                    android:text="@string/category_picture"
                                    style="@style/CategoryButtonTextStyle"/>
                            <TextView
                                    android:id="@+id/category_picture_count"
                                    style="@style/CategoryButtonCountTextStyle"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                        <LinearLayout
                                android:id="@+id/category_bluetooth"
                                style="@style/CategoryButtonStyle">
                            <ImageView
                                    android:src="@drawable/category_icon_bluetooth"
                                    style="@style/CategoryButtonIconStyle"/>
                            <TextView
                                    android:text="@string/category_bluetooth"
                                    style="@style/CategoryButtonTextStyle"/>
                            <TextView
                                    android:id="@+id/category_bluetooth_count"
                                    style="@style/CategoryButtonCountTextStyle"/>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/category_document"
                                style="@style/CategoryButtonStyle">
                            <ImageView
                                    android:src="@drawable/category_icon_document"
                                    style="@style/CategoryButtonIconStyle"/>
                            <TextView
                                    android:text="@string/category_document"
                                    style="@style/CategoryButtonTextStyle"/>
                            <TextView
                                    android:id="@+id/category_document_count"
                                    style="@style/CategoryButtonCountTextStyle"/>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/category_zip"
                                style="@style/CategoryButtonStyle">
                            <ImageView
                                    android:src="@drawable/category_icon_zip"
                                    style="@style/CategoryButtonIconStyle"/>
                            <TextView
                                    android:text="@string/category_zip"
                                    style="@style/CategoryButtonTextStyle"/>
                            <TextView
                                    android:id="@+id/category_zip_count"
                                    style="@style/CategoryButtonCountTextStyle"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                        <LinearLayout
                                android:id="@+id/category_apk"
                                style="@style/CategoryButtonStyle">
                            <ImageView
                                    android:src="@drawable/category_icon_apk"
                                    style="@style/CategoryButtonIconStyle"/>
                            <TextView
                                    android:text="@string/category_apk"
                                    style="@style/CategoryButtonTextStyle"/>
                            <TextView
                                    android:id="@+id/category_apk_count"
                                    style="@style/CategoryButtonCountTextStyle"/>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/category_favorite"
                                style="@style/CategoryButtonStyle">
                            <ImageView
                                    android:src="@drawable/category_icon_favorite"
                                    style="@style/CategoryButtonIconStyle"/>
                            <TextView
                                    android:text="@string/category_favorite"
                                    style="@style/CategoryButtonTextStyle"/>
                            <TextView
                                    android:id="@+id/category_favorite_count"
                                    style="@style/CategoryButtonCountTextStyle"/>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/category_log"
                                style="@style/CategoryButtonStyle">
                            <ImageView
                                    android:src="@drawable/category_icon_log"
                                    style="@style/CategoryButtonIconStyle"/>
                            <TextView
                                    android:text="@string/category_log"
                                    style="@style/CategoryButtonTextStyle"/>
                            <TextView
                                    android:id="@+id/category_log_count"
                                    style="@style/CategoryButtonCountTextStyle"/>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/category_mirouter"
                                style="@style/CategoryButtonStyle"
                                android:visibility="gone">
                            <ImageView
                                    android:src="@drawable/category_icon_router"
                                    style="@style/CategoryButtonIconStyle"/>
                            <TextView
                                    android:text="@string/category_mirouter"
                                    style="@style/CategoryButtonTextStyle"/>
                            <TextView
                                    android:id="@+id/category_log_count"
                                    style="@style/CategoryButtonCountTextStyle"
                                    android:visibility="invisible"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="@drawable/category_panel_shadow"/>

            </FrameLayout>

            <!-- category information -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/category_storage_info_margintop"
                        android:layout_marginBottom="@dimen/category_storage_info_marginbottom"
                        android:paddingLeft="@dimen/category_information_paddingtleft">

                    <TextView
                            android:id="@+id/sd_card_capacity"
                            style="@style/InformationTextStyle"
                            android:drawableLeft="@drawable/sd_card_icon"/>

                    <TextView
                            android:id="@+id/sd_card_available"
                            style="@style/InformationTextStyle"
                            android:drawableLeft="@drawable/sd_card_available_icon"
                            android:layout_marginLeft="10dip"/>
                </LinearLayout>

                <com.android.fileexplorer.view.CategoryBar
                        android:id="@+id/category_bar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/category_bar_height"
                        android:layout_marginRight="@dimen/category_bar_marginright"
                        android:layout_marginLeft="@dimen/category_bar_marginleft"
                        android:layout_gravity="center">
                </com.android.fileexplorer.view.CategoryBar>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/category_legend_paddingtop"
                        android:paddingLeft="@dimen/category_legend_paddingleft"
                        android:paddingBottom="@dimen/category_legend_paddingbottom">
                    <LinearLayout style="@style/CategoryLegendGroupStyle">
                        <TextView
                                android:id="@+id/category_legend_music"
                                style="@style/CategoryLegendStyle"
                                android:drawableLeft="@drawable/legend_music"
                                android:text="@string/category_music"/>
                        <TextView
                                android:id="@+id/category_legend_video"
                                style="@style/CategoryLegendStyle"
                                android:drawableLeft="@drawable/legend_video"
                                android:text="@string/category_video"/>
                        <TextView
                                android:id="@+id/category_legend_picture"
                                style="@style/CategoryLegendStyle"
                                android:drawableLeft="@drawable/legend_picture"
                                android:text="@string/category_picture"/>
                    </LinearLayout>
                    <LinearLayout style="@style/CategoryLegendGroupStyle">
                        <TextView
                                android:id="@+id/category_legend_bluetooth"
                                style="@style/CategoryLegendStyle"
                                android:drawableLeft="@drawable/legend_bluetooth"
                                android:text="@string/category_bluetooth"/>
                        <TextView
                                android:id="@+id/category_legend_document"
                                style="@style/CategoryLegendStyle"
                                android:drawableLeft="@drawable/legend_document"
                                android:text="@string/category_document"/>
                        <TextView
                                android:id="@+id/category_legend_zip"
                                style="@style/CategoryLegendStyle"
                                android:drawableLeft="@drawable/legend_zip"
                                android:text="@string/category_zip"/>
                    </LinearLayout>
                    <LinearLayout style="@style/CategoryLegendGroupStyle">
                        <TextView
                                android:id="@+id/category_legend_apk"
                                style="@style/CategoryLegendStyle"
                                android:drawableLeft="@drawable/legend_apk"
                                android:text="@string/category_apk"/>
                        <TextView
                                android:id="@+id/category_legend_log"
                                style="@style/CategoryLegendStyle"
                                android:drawableLeft="@drawable/legend_log"
                                android:text="@string/category_log"/>
                        <TextView
                                android:id="@+id/category_legend_other"
                                style="@style/CategoryLegendStyle"
                                android:drawableLeft="@drawable/legend_other"
                                android:text="@string/category_other"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>