<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_garbage_cleanup_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2" >
    </ListView>

    <LinearLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@miui:drawable/v5_bottom_bar_bg_light"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/garbage_cleanup_bottom_button_padding_left"
        android:paddingRight="@dimen/garbage_cleanup_bottom_button_padding_right" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_app_garbage_cleanup" />

        <Button
            android:id="@+id/start_cleaning"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/clean_app_garbage" />
    </LinearLayout>

</LinearLayout>