<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/trash_box_over_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal"
        android:text="@string/kuaipan_over_space"
        style="@miui:style/V5.TextAppearance.List.Primary" />

    <TextView
        android:id="@+id/trash_box_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal"
        style="@miui:style/V5.TextAppearance.List.Secondary" />

    <TextView
        android:id="@+id/forward_to_web_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dip"
        android:gravity="center_horizontal"
        style="@miui:style/V5.TextAppearance.List.Secondary"
        android:visibility="gone" />

</LinearLayout>
