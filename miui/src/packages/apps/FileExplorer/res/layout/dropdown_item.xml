<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:background="@drawable/dropdown_item_bg">
    <ImageView
            android:id="@+id/volume_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/storage_volume_item_icon_paddingleft"
            android:paddingRight="@dimen/storage_volume_item_icon_paddingright"
            android:src="@drawable/storage_internal"/>
    <TextView
            android:id="@+id/path_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@miui:style/V5.TextAppearance.List.Primary"/>
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1" />
    <ImageView
            android:id="@+id/unmount_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/storage_volume_item_icon_paddingleft"
            android:paddingRight="@dimen/storage_volume_item_icon_paddingright"
            android:src="@drawable/storage_unmount"
            android:visibility="gone" />
</LinearLayout>
