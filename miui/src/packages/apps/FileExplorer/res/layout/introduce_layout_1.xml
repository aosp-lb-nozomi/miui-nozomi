<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/introduce_text_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/kuaipan_user_guide_paddingTop"
        android:text="@string/user_guide"
        style="@miui:style/V5.TextAppearance.List.Primary"/>
    <ImageView
        android:id="@+id/introduce_image"
        android:layout_height="0dip"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:scaleType="center"/>
    <TextView
        android:id="@+id/introduce_text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/user_guide"
        style="@miui:style/V5.TextAppearance.List.Secondary"/>
</LinearLayout>
