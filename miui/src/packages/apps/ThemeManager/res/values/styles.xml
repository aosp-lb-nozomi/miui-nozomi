<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- wallpaper style -->
    <style name="WallpaperMenuPopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/wallpaper_menu_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/wallpaper_menu_popup_fade_out</item>
    </style>

    <style name="WallpaperInfoPopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/wallpaper_info_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/wallpaper_info_popup_fade_out</item>
    </style>

    <style name="WallpaperDetailInfoTitle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="WallpaperDetailInfoContent">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
</resources>
