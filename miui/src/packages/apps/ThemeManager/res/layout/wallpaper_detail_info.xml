<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dip"
    android:paddingTop="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/WallpaperDetailInfoTitle"
            android:text="@string/description_size" />

        <TextView
            android:id="@+id/size"
            style="@style/WallpaperDetailInfoContent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wallpaper_detail_info_modified_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/WallpaperDetailInfoTitle"
            android:text="@string/description_uploadtime" />

        <TextView
            android:id="@+id/modifiedTime"
            style="@style/WallpaperDetailInfoContent" />
    </LinearLayout>

</LinearLayout>