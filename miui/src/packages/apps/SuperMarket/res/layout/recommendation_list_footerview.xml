<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.xiaomi.market.widget.AnimationUnevenGrid
        android:id="@+id/bottom_uneven_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.GridView" >
    </com.xiaomi.market.widget.AnimationUnevenGrid>

    <LinearLayout
        android:id="@+id/footer_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/common_padding"
        android:layout_marginLeft="@dimen/main_padding"
        android:layout_marginRight="@dimen/main_padding"
        android:layout_marginTop="@dimen/common_padding_medium"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/more_app_button"
            style="@style/Widget.Button.Tab"
            android:text="@string/more_app" >
        </Button>

        <Button
            android:id="@+id/more_subject_button"
            style="@style/Widget.Button.Tab"
            android:text="@string/hot_subject" >
        </Button>
    </LinearLayout>

</LinearLayout>