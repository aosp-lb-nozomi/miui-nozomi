<?xml version="1.0" encoding="UTF-8"?>
<com.xiaomi.market.ui.UpdateAllAppItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ListView.Item.TrebleLine" >

    <Button
        android:id="@+id/update_all"
        style="@style/Widget.Button.Action"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="true"
        android:minWidth="@dimen/action_button_width_large"
        android:text="@string/update_all" />

    <TextView
        android:id="@+id/update_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/update_all"
        android:layout_marginLeft="@dimen/common_padding_small"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.Title" />

</com.xiaomi.market.ui.UpdateAllAppItem>