<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.market.ui.ExpandableTextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/expandable_textview"
        style="@style/TextAppearance.Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/expand_button"
        style="@style/Widget.Button.ExpandAll"
        android:text="@string/expand_full_text"
        android:visibility="gone" />

</com.xiaomi.market.ui.ExpandableTextView>