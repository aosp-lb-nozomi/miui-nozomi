<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/comment_star_text_width"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
    </TextView>

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.ProgressBar.ReadOnly"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_padding_medium" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="@dimen/comment_percentage_width"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_marginLeft="@dimen/common_padding_medium"
        android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
    </TextView>

</LinearLayout>