<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommend_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/recommend_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_recommend_hint_bkg"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="@string/search_recommend_hint"
            android:textAppearance="@style/TextAppearance.Title" >
        </TextView>

        <GridView
            android:id="@+id/recommend_grid"
            style="@style/Widget.GridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </GridView>
    </LinearLayout>

    <com.xiaomi.market.ui.EmptyLoadingView
        android:id="@+id/recommend_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:visibility="gone" />

</FrameLayout>