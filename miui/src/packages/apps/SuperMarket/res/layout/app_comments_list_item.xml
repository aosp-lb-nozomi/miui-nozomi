<?xml version="1.0" encoding="UTF-8"?>
<com.xiaomi.market.ui.AppCommentsItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ListView.Item.TrebleLine"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_padding"
    android:paddingTop="@dimen/common_padding" >

    <com.xiaomi.market.ui.ExpandableTextView
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/expandable_textview"
            style="@style/TextAppearance.Title.Comment.Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/expand_button"
            style="@style/TextAppearance.Title.Comment.Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common_padding_small"
            android:background="@null"
            android:text="@string/expand_full_text_comment" />
    </com.xiaomi.market.ui.ExpandableTextView>

    <RatingBar
            android:id="@+id/ratingbar"
            style="@style/Widget.RatingBar.ReadOnly"
            android:paddingTop="@dimen/comment_padding_list_item_ratingbar_top"
            android:paddingBottom="@dimen/comment_padding_list_item_ratingbar_bottom"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comment_list_item_ratingbar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/username"
            style="@style/TextAppearance.Title.Comment.Item.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/date"
            style="@style/TextAppearance.Title.Comment.Item.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/comment_padding_horizontal" />

        <TextView
            android:id="@+id/version"
            style="@style/TextAppearance.Title.Comment.Item.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/comment_padding_horizontal" />
    </LinearLayout>

</com.xiaomi.market.ui.AppCommentsItem>