<?xml version="1.0" encoding="UTF-8"?>
<com.xiaomi.market.ui.HotCollectionItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageSwitcher
        android:id="@+id/collection_item"
        android:layout_width="@dimen/collection_grid_width"
        android:layout_height="@dimen/collection_grid_height" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/grid_text_padding"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.Title.Secondary"
        android:visibility="gone" >
    </TextView>

</com.xiaomi.market.ui.HotCollectionItem>