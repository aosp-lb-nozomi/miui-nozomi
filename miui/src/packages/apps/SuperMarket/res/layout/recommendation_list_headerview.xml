<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/save_mode_tip_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/data_save_mode_tip_bkg"
        android:gravity="center"
        android:text="@string/data_save_mode_tip"
        android:textAppearance="@style/TextAppearance.Content"
        android:visibility="gone" >
    </TextView>

    <com.xiaomi.market.widget.AnimationUnevenGrid
        android:id="@+id/top_uneven_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.GridView" >
    </com.xiaomi.market.widget.AnimationUnevenGrid>

</LinearLayout>