<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Activity Style -->
    <style name="Theme.Light" parent="@miui:style/V5.Theme.Light">
        <item name="miui:v5_action_bar_tab">true</item>
    </style>

    <style name="Theme.Light.MarketTab">
        <item name="android:homeAsUpIndicator">@null</item>
        <item name="android:actionBarStyle">@style/Widget.ActionBar.MarketTab</item>
    </style>

    <style name="Theme.Light.NoTitle" parent="@miui:style/V5.Theme.Light.NoTitle" />

    <style name="Theme.Light.Settings" parent="@miui:style/V5.Theme.Light.Settings" />

    <style name="Theme.Light.Settings.NoTitle" parent="@miui:style/V5.Theme.Light.Settings.NoTitle" />

    <style name="Theme.Light.TopTransparent" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowBackground">@drawable/window_bg_transparent_top</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Theme.Light.Dialog" parent="@miui:style/V5.Theme.Light.Dialog" />

    <!-- Widget Style -->
    <style name="Widget" parent="@miui:style/V5.Widget" />

    <style name="Widget.ActionBar" parent="@miui:style/V5.Widget.ActionBar" />

    <style name="Widget.ActionBar.MarketTab">
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:logo">@drawable/logo</item>
    </style>

    <style name="Widget.ActionBar.TabText" parent="@miui:style/V5.Widget.ActionBar.TabText" />

    <style name="Widget.Button" parent="@miui:style/V5.Widget.Button" />

    <!-- Tab style button in a LinearLayout -->
    <style name="Widget.Button.Tab">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Widget.Button.Action">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <!-- specify layout_height as match_parent to enlarge touch area! -->
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/action_btn</item>
        <item name="android:minWidth">@dimen/action_button_width</item>
    </style>

    <style name="Widget.Button.Retry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">85dip</item>
        <item name="android:layout_marginRight">85dip</item>
        <item name="android:minHeight">@dimen/large_button_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Button.ExpandAll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/expand_all_bg</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_small</item>
        <item name="android:textColor">@miui:color/v5_tertiary_text_color_light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/common_padding</item>
    </style>

    <style name="Widget.Button.FavoriteLoginButton" parent="@style/Widget.BottomBar.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/favorite_login_button_padding</item>
        <item name="android:paddingRight">@dimen/favorite_login_button_padding</item>
    </style>

    <!-- GridView Style -->
    <!-- No V5 default style -->
    <style name="Widget.GridView">
        <item name="android:padding">@dimen/recommend_grid_padding</item>
        <item name="android:numColumns">@integer/num_grid_columns</item>
        <item name="android:horizontalSpacing">@dimen/recommend_grid_gap</item>
        <item name="android:verticalSpacing">@dimen/recommend_grid_gap</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <!-- ListView Style -->
    <style name="Widget.ListView" parent="@miui:style/V5.Widget.ListView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <!-- ListView Item Style -->
    <style name="Widget.ListView.Item" parent="@miui:style/V5.Widget.ListView.Item" />

    <style name="Widget.ListView.Item.SingleLine" parent="@miui:style/V5.Widget.ListView.Item.SingleLine" />

    <style name="Widget.ListView.Item.TrebleLine" parent="@miui:style/V5.Widget.ListView.Item.TrebleLine">
        <item name="android:layout_height">@dimen/list_item_height</item>
    </style>

    <style name="Widget.ListViewGroupSplitter" parent="@miui:style/V5.TextAppearance.Label">
        <item name="android:background">@drawable/list_splitter</item>
    </style>

    <!-- ratingBar style -->
    <style name="Widget.RatingBar.Edit" parent="@miui:style/V5.Widget.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="Widget.RatingBar.ReadOnly" parent="@miui:style/V5.Widget.RatingBar.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <!-- progressBar style -->
    <style name="Widget.ProgressBar" parent="@miui:style/V5.Widget.ProgressBar" />

    <style name="Widget.ProgressBar.ReadOnly" parent="@miui:style/V5.Widget.ProgressBar.Horizontal.Small">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/progressbar_readonly</item>
        <item name="miui:progressBar">@drawable/progressbar_readonly</item>
    </style>

    <style name="Widget.ProgressBar.Detail" parent="@miui:style/V5.Widget.ProgressBar.Horizontal.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/progressbar_detail_bkg</item>
        <item name="miui:progressBar">@drawable/progressbar_detail_progress</item>
        <item name="miui:progressBarMask">@null</item>
    </style>

    <!-- Icon style -->
    <!-- No V5 default style -->
    <style name="Widget.Icon">
        <item name="android:layout_width">@dimen/display_icon_size</item>
        <item name="android:layout_height">@dimen/display_icon_size</item>
        <item name="android:layout_marginRight">@dimen/common_padding</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Comments Tab -->
    <!-- Do NOT use V5 style here -->
    <style name="Widget.SecondaryTabIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/common_padding</item>
        <item name="android:paddingRight">@dimen/common_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Do NOT use V5 style here -->
    <style name="Widget.SecondaryTab" >
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_medium</item>
        <item name="android:textColor">@miui:color/v5_primary_text_color_light</item>
    </style>

    <!-- SearchBar Style -->
    <style name="Widget.Title.SearchMode" parent="@miui:style/V5.Widget.Title.SearchMode">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">42dp</item>
    </style>

    <style name="Widget.EditText.Search" parent="@miui:style/V5.Widget.EditText.Search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="Widget.Title.Back.Search" parent="@miui:style/V5.Widget.Title.Back.Search">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- BottomBar Style -->
    <style name="Widget.BottomBar" parent="@miui:style/V5.Widget.BottomBar" />

    <style name="Widget.BottomBar.TopLine" parent="@miui:style/V5.Widget.BottomBar.TopLine" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="Widget.BottomBar.Button" parent="@miui:style/V5.Widget.Button">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:background">@miui:drawable/v5_btn_bg_main_action_light</item>
    </style>

    <style name="Widget.BottomBarIcon" parent="@miui:style/V5.Widget.BottomBarIcon">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.AlphabetFastIndexer" parent="@miui:style/AlphabetFastIndexerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance" parent="@miui:style/V5.TextAppearance.Title">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>

    <style name="TextAppearance.Title"> <!-- 有反色 -->
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.Title.NoAntiColor"> <!-- 无反色 -->
        <item name="android:textColor">@miui:color/v5_primary_text_color_light</item>
    </style>

    <style name="TextAppearance.Title.Secondary"> <!-- 有反色 -->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_small</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextAppearance.Title.Secondary.NoAntiColor"> <!-- 无反色 -->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_small</item>
        <item name="android:textColor">@miui:color/v5_tertiary_text_color_light</item>
    </style>

    <style name="TextAppearance.Title.Diagnostics">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_preference_category</item>
    </style>

    <style name="TextAppearance.Title.Preference" parent="@miui:style/V5.TextAppearance.PreferenceList">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Content">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_preference_category</item>
        <item name="android:textColor">@miui:color/v5_primary_text_color_light</item>
    </style>

    <style name="TextAppearance.Subject">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_preference_category</item>
        <item name="android:textColor">@miui:color/v5_tertiary_text_color_light</item>
    </style>

    <style name="TextAppearance.SearchProviderStatement">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_preference_category</item>
        <item name="android:textColor">@miui:color/v5_text_color_hint_light</item>
    </style>

    <style name="TextAppearance.Title.ADIndicator">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_memo</item>
        <item name="android:textColor">@color/ad_text</item>
    </style>

    <style name="TextAppearance.Button" parent="@miui:style/V5.TextAppearance.Button" /> <!-- 需要反色 -->

    <style name="TextAppearance.Button.Action"> <!-- 需要反色 -->
        <item name="android:textSize">@miui:dimen/v5_text_font_size_small</item>
    </style>

    <style name="TextAppearance.Button.Action.Price"> <!-- 需要反色 -->
        <item name="android:textColor">@color/highlight_text</item>
    </style>

    <style name="TextAppearance.Button.BottomAction"> <!-- 需要反色 -->
        <item name="android:textSize">@miui:dimen/v5_text_font_size_large</item>
        <item name="android:textColor">@color/bottom_bar_text</item>
    </style>

    <style name="TextAppearance.Button.Checkbox">
        <item name="android:textColor">@miui:color/v5_secondary_text_color_light</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_preference_category</item>
    </style>

    <!-- App Comments Style -->
    <style name="TextAppearance.Title.Comment" parent="TextAppearance.Title">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Title.Comment.Item"> <!-- 需要反色 -->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_preference_category</item>
    </style>

    <style name="TextAppearance.Title.Comment.Item.Secondary"> <!-- 需要反色 -->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_memo</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextAppearance.Title.Comment.AverageScoreText">
        <item name="android:textColor">@miui:color/v5_primary_text_color_light</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_small</item>
    </style>

    <style name="TextAppearance.Title.Comment.AverageScore">
        <item name="android:textColor">@miui:color/v5_secondary_text_color_light</item>
        <!-- No font size definition in system's styles.xml -->
        <item name="android:textSize">@dimen/text_font_size_comment_score</item>
    </style>

    <style name="TextAppearance.Title.Comment.TotalScoreCount">
        <item name="android:textColor">@miui:color/v5_tertiary_text_color_light</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_memo</item>
    </style>

    <style name="TextAppearance.Title.Comment.Percentage">
        <item name="android:textColor">@miui:color/v5_tertiary_text_color_light</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_memo</item>
    </style>

    <style name="TextAppearance.Title.Comment.Footer">
        <item name="android:textColor">@miui:color/v5_primary_text_color_light</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_memo</item>
    </style>

</resources>
