<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="@android:attr/textAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.SectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Content">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="ActionBar.Title" parent="miui:V5.Widget.ActionBar.Solid.Settings">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>

</resources>
