<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/app_city_edit"
        >
            <EditText
                android:id="@+id/act_find_city_key"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:background="#00000000"
                android:textSize="16sp"
                android:singleLine="true"
                android:hint="@string/act_find_city_hint"
                android:textColorHighlight="#A0FFFFFF"
            />

            <TextView
                android:id="@+id/search_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#808080"
                android:text="@string/act_weather_find_city_search_online"
            />
            <ImageButton
                android:id="@+id/act_find_city_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_gravity="center"
                android:background="#00000000"
                android:src="@drawable/app_city_btn_clear"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/act_find_city_hot_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/act_find_city_hot_title"
            style="@style/text_group_title"/>

        <LinearLayout
            android:id="@+id/act_find_city_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="0dip"
            android:layout_marginRight="11dip"
            android:orientation="vertical"
            android:background="@drawable/app_city_info_bg"
        >
            <TextView
                android:id="@+id/act_find_city_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:text="@string/act_find_city_null_data"
                android:background="#00000000"
            />
            <GridView
                android:id="@+id/act_find_city_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:scrollbars="none"
            />
             <TextView
                android:id="@+id/isSearching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#808080"
                android:background="#00000000"
                android:text="@string/act_weather_find_city_searching"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
