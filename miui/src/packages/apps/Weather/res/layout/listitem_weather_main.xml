<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/listitem_weather_main_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/listitem_weather_main_layout_up"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" >
            <ImageView
                android:id="@+id/listitem_weather_main_img"
                android:layout_width="22dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="10dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/i_drag"
                android:background="#00000000" />
            <TextView
                android:id="@+id/listitem_weather_main_key"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:textSize="14sp"
                android:textColor="#858586"
                android:singleLine="true"
                style="@style/text_shadow_2" />
            <TextView
                android:id="@+id/listitem_weather_main_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:textSize="13sp"
                android:textColor="#8e8f91"
                android:singleLine="true"
                style="@style/text_shadow_2" />
            <ImageView
                android:id="@+id/listitem_weather_main_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:src="@drawable/arrow_down"
                android:background="#00000000" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/listitem_weather_main_layout_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dip"
            android:visibility="gone" >
            <TextView
                android:id="@+id/listitem_weather_main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:textSize="12sp"
                android:textColor="#8b8c8c" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/miui_separator_color" />
</FrameLayout>