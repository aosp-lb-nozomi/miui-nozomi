<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/miui_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/miui_title"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/xiaomi_phone_manager"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/Item.DoubleLine"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/xiaomi_phone_manager"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/new_update_bar"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/Item.DoubleLine"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip">
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/new_update_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="left"
                        style="@style/TextAppearance.List.Primary.Oragne"
                        android:ellipsize="marquee"
                        android:text="@string/app_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="left|center_vertical"
                        style="@miui:style/V5.TextAppearance.List.Secondary"
                        android:ellipsize="marquee"
                        android:text="@string/new_update_content_title"/>
                </LinearLayout>
                <include layout="@layout/arrow_right_view"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/title_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/Item.DoubleLine">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip">
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rom_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        style="@miui:style/V5.TextAppearance.List.Primary"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical|left"/>
                    <TextView
                        android:id="@+id/current_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@miui:style/V5.TextAppearance.List.Secondary"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical|left"
                        android:text="@string/current_version_text"/>
                </LinearLayout>
                <include layout="@layout/arrow_right_view"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/update_feedback"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/Item.SingleLine"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/update_feedback"
                    style="@miui:style/V5.TextAppearance.List.Primary"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical|left"/>
                <include layout="@layout/arrow_right_view"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/recommend_vote"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/Item.SingleLine"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/recommend_vote_title"
                    style="@miui:style/V5.TextAppearance.List.Primary"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical|left"/>
                <include layout="@layout/arrow_right_view"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_account"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/Item.DoubleLine"
            android:visibility="gone">
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip">
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="left"
                        style="@miui:style/V5.TextAppearance.List.Primary"
                        android:ellipsize="marquee"
                        android:text="@string/sign_in_add_account"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="left|center_vertical"
                        style="@miui:style/V5.TextAppearance.List.Secondary"
                        android:ellipsize="marquee"
                        android:text="@string/sign_in_add_account_helper"/>
                </LinearLayout>
                <include layout="@layout/arrow_right_view"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/sign_in_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sign_in_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dip"
                android:gravity="center"
                style="@miui:style/V5.TextAppearance.List.Secondary"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/transparent_40_black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
