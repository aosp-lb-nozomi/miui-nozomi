<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="TextAppearance"
        parent="@android:attr/textAppearance">
        <item
            name="android:textColor">@color/black</item>
    </style>
    <style
        name="TextAppearance.Content">
        <item
            name="android:textSize">18sp</item>
        <item
            name="android:textColor">#666666</item>
    </style>
    <style
        name="TextAppearance.Medium">
        <item
            name="android:textSize">18sp</item>
    </style>
    <style
        name="TextAppearance.Small">
        <item
            name="android:textSize">14sp</item>
    </style>
    <style
        name="TextAppearance.Button">
        <item
            name="android:textSize">16sp</item>
        <item
            name="android:textColor">@color/deepgrey</item>
    </style>

    <!-- v5 text style -->
    <style
        name="TextAppearance.List.Primary.Oragne" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item
            name="android:textColor">@color/primary_text_orange</item>
    </style>
    <style
        name="TextAppearance.Title.small" parent="@miui:style/V5.TextAppearance.Title">
        <item
            name="android:textStyle">normal</item>
        <item
            name="android:textSize">@miui:dimen/v5_text_font_size_small</item>
    </style>

    <!-- v5 theme style -->
    <style name="ActionBar" parent="@miui:style/V5.Widget.ActionBar">
            <item name="android:background">@drawable/action_bar_bg</item>
    </style>
    <style name="ActionBar.UnShown">
        <item name="android:height">0dip</item>
        <item name="android:displayOptions"></item>
    </style>

    <!-- v5 item style -->
    <style name="Item" parent="@miui:style/V5.Widget.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/item_bg</item>
    </style>
    <style name="Item.SingleLine">
        <item name="android:layout_height">@miui:dimen/v5_list_view_single_line_height</item>
        <item name="android:textAppearance">@miui:style/V5.TextAppearance.List</item>
    </style>
    <style name="Item.DoubleLine">
        <item name="android:layout_height">@miui:dimen/v5_list_view_double_line_height</item>
        <item name="android:textAppearance">@miui:style/V5.TextAppearance.List.Primary</item>
    </style>

    <!-- ratingBar style -->
    <style name="Widget.RatingBar.Edit" parent="@miui:style/V5.Widget.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

</resources>
