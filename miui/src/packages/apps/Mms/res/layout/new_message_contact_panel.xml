<?xml version="1.0" encoding="utf-8"?>

<com.android.mms.ui.SizeAwareLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_bar_bg_one_row"
    >
    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/back_to_message_list"
        android:background="@miui:drawable/v5_title_bar_back_button_light"/>
    <FrameLayout
        android:addStatesFromChildren="true"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/recipients_editor_bg">
        <TextView
            android:id="@+id/recipients_viewer_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_label"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@drawable/recipient_editor_bg"
            android:textAppearance="@style/TextAppearance.EditText.Recipient.Secondary"/>
        <ScrollView
            android:id="@+id/recipient_rows_scroller"
            android:addStatesFromChildren="true"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.android.mms.ui.RowLayout
                xmlns:mms="http://schemas.android.com/apk/res/com.android.mms"
                mms:horizontalSpacing="4dp"
                mms:verticalSpacing="@dimen/recipient_row_padding"
                android:id="@+id/recipient_rows"
                android:addStatesFromChildren="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/recipients_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:minWidth="40dip"
                    android:gravity="center_vertical"
                    android:background="@drawable/recipient_editor_bg"
                    style="@style/TextAppearance.EditText.Recipient"/>
            </com.android.mms.ui.RowLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/recipients_viewer_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/recipients_viewer"
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@drawable/recipient_editor_bg"
                android:textAppearance="@style/TextAppearance.EditText.Recipient"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/recipients_viewer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.EditText.Recipient.Secondary"
                android:visibility="gone"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/add_recipient_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:id="@+id/add_recipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/select_recipient"
            android:background="@drawable/add_recipients_bg"/>
        <Button
            android:id="@+id/confirm_recipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/confirm_recipient_btn"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/recipient_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MessageCounter.White"
            android:visibility="gone"/>
    </LinearLayout>
</com.android.mms.ui.SizeAwareLinearLayout>