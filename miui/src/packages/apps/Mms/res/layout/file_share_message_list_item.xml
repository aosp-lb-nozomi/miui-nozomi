<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/file_share_message_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/file_share_icon"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />
    <View
        android:id="@+id/file_share_message_padding"
        android:layout_width="8dip"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <TextView
        android:id="@+id/file_share_message_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:autoLink="none"
        android:layout_marginTop="@dimen/list_item_padding_inner"
        android:layout_marginBottom="@dimen/list_item_padding_inner"
        android:textAppearance="@style/TextAppearance.MessageBody.In"/>
</LinearLayout>