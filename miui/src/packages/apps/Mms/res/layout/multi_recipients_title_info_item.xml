<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@miui:drawable/v5_list_view_item_bg_light"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center_vertical" >
    <TextView
        android:id="@+id/contact_info_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:ellipsize = "end"
        android:textAppearance="@style/TextAppearance.List.Primary" />
    <TextView
        android:id="@+id/contact_info_number"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:ellipsize = "end"
        android:textAppearance="@style/TextAppearance.List.Secondary" />
</LinearLayout>
