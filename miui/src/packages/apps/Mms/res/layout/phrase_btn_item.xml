<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/attachment_pharse_list_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    style="@style/ListItem">
    <ImageView
        android:src="@drawable/edit_phrase"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <TextView
        android:text="@string/edit_phrase"
        android:paddingLeft="@dimen/list_item_padding_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.List.Primary.Normal"
        android:textColor="@color/text_color_attachment_type"/>
</LinearLayout>
