<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blocked_bottom_panel"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="bottom"
    android:background="@drawable/message_edit_bottom_panel" >
    <Button
        android:id="@+id/no_block_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/button_margin_default"
        android:layout_marginLeft="@dimen/button_margin_default"
        android:layout_marginRight="@dimen/button_margin_default"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:text="@string/no_block_button_msg" />
</LinearLayout>