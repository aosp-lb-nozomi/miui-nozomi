<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    android:orientation="vertical">
    <TextView
        android:id="@+id/card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:autoLink="none"
        android:maxWidth="@dimen/max_bubble_card_name_width"
        android:layout_marginTop="@dimen/list_item_padding_inner"
        android:layout_marginBottom="@dimen/list_item_padding_inner"
        android:textAppearance="@style/TextAppearance.Card.Primary"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/card_divider"/>
    <LinearLayout
        android:id="@+id/card_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_padding_inner"
        android:orientation="vertical"/>
</LinearLayout>