<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@miui:dimen/v5_list_view_double_line_height"
    android:paddingLeft="@dimen/list_item_padding_outer"
    android:paddingRight="@dimen/list_item_padding_outer"
    android:gravity="center_vertical"
    android:background="@miui:drawable/v5_list_view_item_bg_light">
    <view
        class="com.android.mms.ui.SearchFragment$TextViewSnippet"
        android:id="@+id/name"
        android:textAppearance="@style/TextAppearance.List.Primary"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:singleLine="true" />
    <view
        class="com.android.mms.ui.SearchFragment$TextViewSnippet"
        android:id="@+id/number"
        android:textAppearance="@style/TextAppearance.List.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true" />
</LinearLayout>
