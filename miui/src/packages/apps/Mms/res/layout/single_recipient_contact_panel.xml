<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/title_bar_tall_bg">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        >
        <QuickContactBadge
            android:id="@+id/avatar"
            android:layout_height="@dimen/avatar_size_medium"
            android:layout_width="@dimen/avatar_size_medium"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/mx_recommend_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mx_recommend_arrow"
            android:visibility="gone"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="15dip"
        android:orientation="vertical">
        <com.android.mms.ui.ShrinkableLinearLayout
            xmlns:mms="http://schemas.android.com/apk/res/com.android.mms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            mms:shrinkableIndex="1">
            <TextView
                android:id="@+id/fetion_prefix"
                android:layout_marginRight="3dip"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:textAppearance="@style/TextAppearance.Title"
                android:text="@string/fetion_prefix"
                android:textColor="@color/fetion_prefix_text_color_dark"/>
            <miui.widget.MarqueeTextView
                android:id="@+id/from"
                android:layout_marginRight="3dip"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:textAppearance="@style/TextAppearance.Title"/>
            <TextView
                android:id="@+id/message_count"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.Title.Secondary"/>
        </com.android.mms.ui.ShrinkableLinearLayout>
        <TextView
            android:id="@+id/phone_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Title.Secondary"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/call_btn"/>
</LinearLayout>