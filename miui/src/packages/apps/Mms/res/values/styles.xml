<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Light"
           parent="@miui:style/V5.Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Light.Title"
           parent="@miui:style/V5.Theme.Light">
    </style>

    <style name="Theme.Light.ActionBar.NoTitle"
           parent="@miui:style/V5.Theme.Light.ActionBar.NoTitle">
    </style>

    <style name="Theme.Light.NoTitle"
           parent="@miui:style/V5.Theme.Light.NoTitle" />

    <style name="Theme.Light.Conversation" parent="@style/Theme.Light.ActionBar.NoTitle">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@drawable/conversation_bg</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Theme.Light.Dialog"
           parent="@miui:style/V5.Theme.Light.Dialog" />

    <style name="Theme.Light.Dialog.NoTitle"
           parent="@miui:style/V5.Theme.Light.Dialog.NoTitle" />

    <style name="Theme.Light.Translucent"
           parent="@miui:style/V5.Theme.Light.Translucent" />

    <style name="Theme.Light.Translucent.NoTitle"
           parent="@miui:style/V5.Theme.Light.Translucent.NoTitle" />

    <style name="Theme.Light.Picker.ActionBar" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
    </style>

    <style name="Theme.Light.Picker" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/Theme.Light.Picker.ActionBar</item>
    </style>

    <style name="ListItem">
        <item name="android:paddingTop">@dimen/list_item_padding_outer_v</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_outer_v</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_outer</item>
        <item name="android:paddingRight">@dimen/list_item_padding_outer</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@miui:drawable/v5_list_view_item_bg_light</item>
    </style>

    <style name="ListItem.NewMessagePopup">
        <item name="android:background">@drawable/new_message_popup_item_bg</item>
    </style>

    <style name="TextAppearance" parent="miui:style/V5.TextAppearance"/>

    <!-- 会话列表list item样式 -->
    <style name="TextAppearance.List.Primary" parent="miui:style/V5.TextAppearance.List.Primary" />
    <style name="TextAppearance.List.Primary.Highlight">
        <item name="android:textColor">@color/highlight_text</item>
        <item name="android:textColorLink">@color/highlight_text</item>
    </style>
    <style name="TextAppearance.List.Primary.Normal">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.List.Primary.Normal.Grey">
        <item name="android:textColor">@miui:color/v5_secondary_text_light</item>
    </style>

    <style name="TextAppearance.List.Secondary" parent="miui:style/V5.TextAppearance.List.Secondary" />
    <style name="TextAppearance.List.Secondary.Highlight">
        <item name="android:textColor">@color/highlight_text</item>
        <item name="android:textColorLink">@color/highlight_text</item>
    </style>
    <style name="TextAppearance.List.Secondary.Black">
        <item name="android:textColor">@miui:color/v5_primary_text_light</item>
    </style>
    <style name="TextAppearance.List.Secondary.White">
        <item name="android:textColor">@miui:color/v5_primary_text_dark</item>
    </style>
    <style name="TextAppearance.List.Secondary.Grey">
        <item name="android:textColor">@miui:color/v5_secondary_text_light</item>
    </style>

    <style name="TextAppearance.Card.Primary" parent="style/TextAppearance.List.Primary" >
        <item name="android:textColor">@color/text_color_card_primary</item>
    </style>

    <style name="TextAppearance.Card.Secondary" parent="style/TextAppearance.List.Secondary" >
        <item name="android:textColor">@color/text_color_card_secondary</item>
    </style>

    <style name="TextAppearance.List.EmptyView" parent="style/TextAppearance.List.Secondary" >
        <item name="android:textColor">@miui:color/v5_secondary_text_color_light</item>
    </style>

    <!-- 单发会话页头 -->
    <style name="TextAppearance.Title" parent="miui:style/V5.TextAppearance.Title.Medium"/>
    <style name="TextAppearance.Title.Secondary" parent="miui:style/V5.TextAppearance.Title.Medium.Secondary"/>
    <style name="TextAppearance.MxRecommend" parent="miui:style/V5.TextAppearance.Title.Medium.Secondary">
        <item name="android:shadowColor">@null</item>
    </style>

    <style name="TextAppearance.DialogTitle" parent="miui:style/V5.TextAppearance.DialogTitle"/>

    <style name="TextAppearance.DialogTitle.Secondary">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_list_secondary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- 会话item -->
    <style name="TextAppearance.MessageBody">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_primary</item>
        <item name="android:textColorLink">@color/link_text_color</item>
    </style>
    <style name="TextAppearance.MessageBody.In">
        <item name="android:textColor">@color/message_text_in_color</item>
    </style>
    <style name="TextAppearance.MessageBody.Out">
        <item name="android:textColor">@color/message_text_out_color</item>
    </style>
    <style name="TextAppearance.MessageBody.Highlight">
        <item name="android:textColor">@color/highlight_text</item>
        <item name="android:textColorLink">@color/highlight_text</item>
    </style>
    <style name="TextAppearance.MessageSubject" parent="miui:style/V5.TextAppearance.List.Primary">
        <item name="android:textColorLink">@color/link_text_color</item>
    </style>
    <style name="TextAppearance.MessageSubject.In">
        <item name="android:textColor">@color/message_text_in_color</item>
    </style>
    <style name="TextAppearance.MessageSubject.Out">
        <item name="android:textColor">@color/message_text_out_color</item>
    </style>
    <style name="TextAppearance.MessageSubject.Highlight">
        <item name="android:textColor">@color/highlight_text</item>
        <item name="android:textColorLink">@color/highlight_text</item>
    </style>
    <style name="TextAppearance.MessageBody.Secondary">
        <item name="android:textColor">@miui:color/v5_secondary_text_light</item>
        <item name="android:textSize">@dimen/text_font_size_small</item>
    </style>
    <style name="TextAppearance.MessageDesc" parent="miui:style/V5.TextAppearance.Small">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_memo</item>
    </style>
    <style name="TextAppearance.MessageDesc.Date">
        <item name="android:textSize">@dimen/text_font_size_tiny</item>
        <item name="android:textColor">@miui:color/v5_primary_text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.MessageDesc.Black">
        <item name="android:textColor">@miui:color/v5_primary_text_light</item>
    </style>
    <style name="TextAppearance.MessageDesc.Solid">
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>
    <style name="TextAppearance.MessageDesc.BookmarkDate">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_list_secondary</item>
    </style>
    <style name="TextAppearance.MessageCounter">
        <item name="android:textSize">@dimen/text_font_size_small</item>
        <item name="android:textColor">@miui:color/v5_secondary_text_light</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.MessageCounter.White">
        <item name="android:textColor">@miui:color/v5_primary_text_dark</item>
    </style>
    <style name="TextAppearance.FlatshowTitle">
        <item name="android:textSize">@dimen/flatshow_title_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.FlatshowTitle.Highlight">
        <item name="android:textColor">@color/highlight_text</item>
        <item name="android:textColorLink">@color/highlight_text</item>
    </style>
    <style name="TextAppearance.FlatshowSubTitle">
        <item name="android:textSize">@dimen/text_font_size_small</item>
    </style>

    <style name="TextAppearance.EditText" parent="miui:style/V5.TextAppearance.EditText"/>
    <style name="TextAppearance.EditText.Mms"/>
    <style name="TextAppearance.EditText.Mms.NicknameSpan">
        <item name="android:textColor">@color/nickname_placeholder_fg</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_small</item>
    </style>
    <style name="TextAppearance.EditText.Recipient"/>
    <style name="TextAppearance.EditText.Recipient.Secondary">
        <item name="android:textColor">@miui:color/v5_secondary_text_light</item>
    </style>


    <style name="TextAppearance.FlatshowPageNo">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/flatshow_pageno_font_size</item>
        <item name="android:textColor">@color/flatshow_pageno_text_color</item>
        <item name="android:shadowColor">@color/flatshow_pageno_text_shadow_color</item>
    </style>

    <style name="MessageButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_font_size_small</item>
    </style>

    <style name="MessageButton.Alert">
        <item name="android:background">@drawable/alert_btn</item>
        <item name="android:textColor">@color/message_button_alert_text_color</item>
    </style>

    <style name="MessageButton.Common">
        <item name="android:background">@drawable/common_btn</item>
    </style>

    <!-- unread message count style -->
    <style name="UnreadMessageCount">
        <item name="android:textColor">@miui:color/v5_primary_text_dark</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HighlightedSendButton" parent="@miui:style/V5.TextAppearance.Button">
        <item name="android:textColor">@color/highlight_text</item>
        <item name="android:textSize">@dimen/send_button_text_font_size</item>
    </style>

    <style name="NormalTextSendButton" parent="@miui:style/V5.TextAppearance.Button">
        <item name="android:textSize">@dimen/send_button_text_font_size</item>
    </style>

    <style name="loading_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/loading_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">false</item>
    </style>

</resources>
