<resources>

    <style name="Theme.MainPage" parent="@miui:V5.Theme.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
        <item name="android:displayOptions">@null</item>
    </style>

    <style name="Theme.ListPage" parent="@miui:V5.Theme.Light.Settings"></style>

    <style name="Theme.Provision" parent="@miui:V5.Theme.Light.Settings">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>

    <style name="Theme.Panel" parent="@miui:V5.Theme.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.Provision" parent="miui:V5.TextAppearance">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Button.Provision" parent="miui:V5.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_marginBottom">15dip</item>
    </style>

    <style name="Widget.Seperator" parent="@miui:V5.Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/seperator_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/seperator_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/seperator_vertical_margin</item>
        <item name="android:background">@drawable/seperator</item>
    </style>

    <style name="TextView.Info.Provision" parent="miui:V5.Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/text_view_info_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/text_view_info_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/text_view_info_horizontal_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.Provision</item>
    </style>

</resources>