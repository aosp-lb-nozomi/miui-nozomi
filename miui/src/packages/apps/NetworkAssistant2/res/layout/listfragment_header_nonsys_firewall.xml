<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@miui:style/V5.Widget.ListView.Item.DoubleLine"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <TextView
        android:id="@+id/textview_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:text="@string/firewall_applist"
        android:textAppearance="@miui:style/V5.TextAppearance.List.Primary" />

    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_mobile_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview_mobile_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_firewall_button_background"
                android:scaleType="center" />

            <TextView
                android:id="@+id/textview_mobile_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firewall_rule_group_title_mobile"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_wifi_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview_wifi_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_firewall_button_background"
                android:gravity="center_horizontal"
                android:scaleType="center" />

            <TextView
                android:id="@+id/textview_wifi_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firewall_rule_group_title_wifi"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>