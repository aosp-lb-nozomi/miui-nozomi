             <Preference
            android:key="pref_specified_adjuest_traffic"
            android:title="@string/pref_specified_adjust" />
        -->
    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_automatic_adjust_traffic"
        android:title="@string/pref_automatic_adjust" >
        <Preference
            android:key="pref_adjust_data_usage"
            android:title="@string/pref_adjust_data_usage" />
        <Preference
            android:key="pref_automatic_adjust_settings"
            android:summary="@string/pref_setting_operators_message"
            android:title="@string/pref_auto_adjust_settings" />

        <CheckBoxPreference
            android:key="pref_automatic_adjust"
