        android:title="@string/pref_manual_adjust" >
        <Preference
            android:key="pref_daily_adjust_traffic"
            android:title="@string/pref_daily_adjust" />
        <Preference
            android:key="pref_free_adjust_traffic"
            android:title="@string/pref_free_adjust" />
