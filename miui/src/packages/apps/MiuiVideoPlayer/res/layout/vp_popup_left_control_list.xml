<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.85"
    android:background="@color/vp_black" >

    <ListView
        android:id="@+id/control_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/control_list_view_divider"
        android:dividerHeight="1px"
         >
    </ListView>

    <include
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/control_list_listview"
        layout="@layout/vp_vertical_line_stroke" />

</RelativeLayout>