<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/top_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/vp_back_v5_imageview" />

    <TextView
        android:id="@+id/top_info_media_name_txt"
        style="@style/vp_top_status_bar_media_name_textview_style_v5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/top_back_img"
        android:singleLine="true" />

    <TextView
        android:id="@+id/local_online_media_textview"
        style="@style/vp_top_status_bar_sub_title_textview_style_v5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_info_media_name_txt"
        android:layout_marginTop="@dimen/top_status_bar_sub_title_textview_margin_top_v5"
        android:layout_toRightOf="@id/top_back_img" />

    <ImageView
        android:id="@+id/small_seperate_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_info_media_name_txt"
        android:layout_toRightOf="@id/local_online_media_textview"
        android:background="@drawable/vp_title_seperator"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/media_ci_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_info_media_name_txt"
        android:layout_toRightOf="@id/small_seperate_textview" />

    <ImageView
        android:id="@+id/top_info_bettery_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/top_info_time_txt" />

    <TextView
        android:id="@+id/top_info_time_txt"
        style="@style/media_top_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/popup_top_status_time_textview_margin_right"
        android:layout_marginTop="3dp"
        android:textColor="#7FFFFFFF"
        android:textSize="@dimen/popup_top_status_time_textview_font_size" />

</RelativeLayout>