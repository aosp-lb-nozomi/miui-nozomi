<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/progress_time_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/vp_arrow_right" />

    <TextView
        android:id="@+id/progress_time_textview"
        android:layout_width="@dimen/popup_center_time_progress_textview_width"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/vp_white"
        android:textStyle="bold" />

</LinearLayout>