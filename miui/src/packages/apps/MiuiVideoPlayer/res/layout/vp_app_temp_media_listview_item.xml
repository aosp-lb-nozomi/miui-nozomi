<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/listview_item_imageview"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true" 
        android:src="@drawable/vp_launcher_icon"
        />

    <TextView
        android:id="@+id/listview_item_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listview_item_imageview"/>
    
    <TextView
        android:id="@+id/listview_item_desc_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listview_item_name_textview"
        android:layout_toRightOf="@id/listview_item_imageview"
        />


</RelativeLayout>