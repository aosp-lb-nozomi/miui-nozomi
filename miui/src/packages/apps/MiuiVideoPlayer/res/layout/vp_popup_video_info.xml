<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/length_label"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_info_length_label" />

    <TextView
        android:id="@+id/length"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/popup_media_info_horizontal_space"
        android:layout_toRightOf="@id/length_label" />

    <TextView
        android:id="@+id/resolution_label"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/length_label"
        android:text="@string/video_info_resolution_label" />

    <TextView
        android:id="@+id/resolution"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/length"
        android:layout_marginLeft="@dimen/popup_media_info_horizontal_space"
        android:layout_toRightOf="@id/resolution_label" />

    <TextView
        android:id="@+id/video_coding_label"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resolution_label"
        android:text="@string/video_info_video_coding_label" />

    <TextView
        android:id="@+id/video_coding"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resolution"
        android:layout_marginLeft="@dimen/popup_media_info_horizontal_space"
        android:layout_toRightOf="@id/video_coding_label" />

    <TextView
        android:id="@+id/audio_coding_label"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_coding_label"
        android:text="@string/video_info_audio_coding_label" />

    <TextView
        android:id="@+id/audio_coding"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_coding"
        android:layout_marginLeft="@dimen/popup_media_info_horizontal_space"
        android:layout_toRightOf="@id/audio_coding_label" />

    <TextView
        android:id="@+id/audio_bitrate_label"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audio_coding_label"
        android:text="@string/video_info_audio_bitrate_label" />

    <TextView
        android:id="@+id/audio_bitrate"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audio_coding"
        android:layout_marginLeft="@dimen/popup_media_info_horizontal_space"
        android:layout_toRightOf="@id/audio_bitrate_label" />

    <TextView
        android:id="@+id/frame_rate_label"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audio_bitrate_label"
        android:text="@string/video_info_frame_rate_label" />

    <TextView
        android:id="@+id/frame_rate"
        style="@style/video_info_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audio_bitrate"
        android:layout_marginLeft="@dimen/popup_media_info_horizontal_space"
        android:layout_toRightOf="@id/frame_rate_label" />

</RelativeLayout>