<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
     >

    <ImageView
        android:id="@+id/airkan_device_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/vp_airkan_xiaomi_phone_imageview" />

    <TextView
        android:id="@+id/airkan_device_name_textview"
        style="@style/popup_bottom_airkan_device_item_textview_style"
        android:layout_width="@dimen/popup_bottom_airkan_device_item_name_width"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@id/airkan_device_imageview"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/airkan_device_xiaomi_phone"/>

</RelativeLayout>