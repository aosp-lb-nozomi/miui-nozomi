<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/popup_left_control_listview_item_height" >

    <TextView
        android:id="@+id/control_listview_item_name_textview"
        style="@style/popup_left_controllist_textview_style"
        android:layout_width="@dimen/popup_left_control_listview_item_textview_width"
        android:layout_height="@dimen/popup_left_control_listview_item_height"
        android:layout_marginLeft="@dimen/popup_left_control_listview_item_textview_margin_left"
        android:gravity="center_vertical"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/control_listview_item_name_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/popup_left_control_listview_item_imageview_margin_right"
        android:layout_toRightOf="@id/control_listview_item_name_textview" />

</RelativeLayout>