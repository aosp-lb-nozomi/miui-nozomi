<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/progress_textview_container"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginRight="6dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/progress_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/vp_tips_right"
            android:gravity="center"
            android:textColor="@color/vp_black"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/content_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/popup_volume_imageview_margin_right"
        android:layout_marginLeft="@dimen/popup_volume_imageview_margin_left"
        android:layout_toRightOf="@id/progress_textview_container"
        android:src="@drawable/vp_adjust_volume" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/popup_volume_seekbar_margin_left"
        android:layout_marginRight="@dimen/popup_volume_seekbar_margin_right"
        android:max="100"
        android:maxHeight="@dimen/vertical_seekbar_width"
        android:minHeight="@dimen/vertical_seekbar_width"
        android:paddingLeft="@dimen/vertical_seekbar_padding_left"
        android:paddingRight="@dimen/vertical_seekbar_padding_right"
        android:progressDrawable="@drawable/vp_vertical_progressbar"
        android:thumbOffset="@dimen/vertical_seekbar_thumb_offset"
        android:thumb="@drawable/vp_seekbar_thumb" />

</RelativeLayout>