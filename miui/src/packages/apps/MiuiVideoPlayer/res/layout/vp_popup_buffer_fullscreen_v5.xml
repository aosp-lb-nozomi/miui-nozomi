<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vp_fullscreen_play_backgroud_v5" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:id="@+id/loading_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center"
            >

            <TextView
                android:id="@+id/loading_textview"
                style="@style/vp_loading_buffering_textview_style_v5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/buffering_video_netplay_label_v5" />

            <TextView
                android:id="@+id/buffer_percent_textview"
                style="@style/vp_loading_buffering_textview_style_v5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/loading_textview"
                android:layout_toRightOf="@id/loading_textview" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>