<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/ContentPadding"
        >
    <LinearLayout
            android:id="@+id/bottom_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
        <Button
                android:id="@+id/add_account_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/add_weibo_account"
                />
    </LinearLayout>
    <TextView
            android:id="@+id/add_account_dspt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="@dimen/notice_text_padding_h"
            android:layout_marginRight="@dimen/notice_text_padding_h"
            android:gravity="center_horizontal"
            android:text="@string/bind_weibo_description"
            style="@style/TextPrimary"
            />
    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/add_account_dspt"
        style="@style/Divider"
        />
    <ImageView
            android:id="@+id/add_account_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="87dp"
            />
</RelativeLayout>