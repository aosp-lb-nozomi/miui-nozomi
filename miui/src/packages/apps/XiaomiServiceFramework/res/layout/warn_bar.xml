<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/warn_bg"
              android:gravity="center_vertical"
    >
    <TextView
        android:id="@+id/warn_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TextAppearance.Warn"
        />
    <Button
        android:id="@+id/warn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/warn_close"
        />
    <Button
        android:id="@+id/warn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/enable_sync"
        android:background="@drawable/warn_btn"
        style="@style/TextAppearance.Warn"
        />
</LinearLayout>