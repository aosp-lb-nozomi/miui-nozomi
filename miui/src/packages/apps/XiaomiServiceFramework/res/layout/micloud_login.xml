<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/content_horizontal_margin"
            android:paddingRight="@dimen/content_horizontal_margin"
            android:paddingTop="@dimen/content_horizontal_margin"
            android:paddingBottom="@dimen/content_bottom_margin"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <EditText
                    android:id="@+id/et_account_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/account_hint_text"
                    android:singleLine="true"
                    android:inputType="textVisiblePassword"
                    android:background="@drawable/group_first_item_normal_bg"
                    />
            <EditText
                    android:id="@+id/et_account_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:singleLine="true"
                    android:password="true"
                    android:background="@drawable/group_last_item_normal_bg"
                    />
            <LinearLayout
                    android:id="@+id/et_captcha_area"
                    android:background="@drawable/group_last_item_normal_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone">
                <EditText
                        android:id="@+id/et_captcha_code"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/captcha"
                        android:singleLine="true"
                        android:background="@null"
                        />
                <ImageView
                        android:id="@+id/et_captcha_image"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
            <CheckBox
                    android:id="@+id/show_password"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/show_password"/>
            <Button
                    android:id="@+id/tv_forget_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forget_password"
                    style="@style/HyperLinkStyle"
                    android:background="@drawable/btn_transparent_bkg"/>
        </LinearLayout>

        <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_notice_text_margin_h"
                android:layout_marginRight="@dimen/login_notice_text_margin_h"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:textSize="@dimen/button_text_size"
                />

        <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/login"
                style="@style/ButtonLogin"
                />

        <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                style="@style/PrivacyPolicy"
                />
    </LinearLayout>
</ScrollView>