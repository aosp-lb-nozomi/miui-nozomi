<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/content_horizontal_margin"
                android:paddingRight="@dimen/content_horizontal_margin"
                android:paddingTop="@dimen/content_horizontal_margin"
                android:paddingBottom="@dimen/content_bottom_margin"
        >
    <LinearLayout
            android:id="@+id/bottom_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
        <Button
                android:id="@+id/tv_skip_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/micloud_welcome_skip_login"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                style="@style/HyperLinkStyle"
                android:background="@drawable/btn_transparent_bkg"
                />
        <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/micloud_use_existing"
                style="@style/ButtonNotice"
                />
        <Button
                android:id="@+id/btn_reg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/buttons_margin_v"
                android:text="@string/micloud_reg_new"
                style="@style/ButtonNormal"
                />
    </LinearLayout>
    <TextView
            android:id="@+id/account_dspt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="@dimen/notice_text_padding_h"
            android:layout_marginRight="@dimen/notice_text_padding_h"
            android:gravity="center_horizontal"
            android:text="@string/account_dspt"
            style="@style/TextPrimary"
            />
    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/account_dspt"
        style="@style/Divider"
        />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/account_large_logo_top_margin"
            android:src="@drawable/mi_rabbit"
            />
</RelativeLayout>