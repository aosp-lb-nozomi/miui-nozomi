<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/content_horizontal_margin"
    android:paddingLeft="@dimen/content_horizontal_margin"
    android:paddingBottom="@dimen/content_bottom_margin"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/activate_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/account_activate_failed"/>
        <TextView
            android:id="@+id/activate_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="@string/micloud_activing_account_failed"/>
    </LinearLayout>
    <include
        android:id="@+id/bottom_panel"
        layout="@layout/micloud_steps_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>
</LinearLayout>