<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/pic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/micloud_intro_02"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/pic"
        android:background="@drawable/micloud_intro_bg"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/micloud_intro_margin_h"
            android:layout_marginRight="@dimen/micloud_intro_margin_h"
            android:layout_marginTop="@dimen/micloud_intro_margin_t"
            android:text="@string/micloud_intro_02_part_01"
            style="@style/MiCloudIntro02Part1"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/micloud_intro_margin_v"
            android:layout_marginLeft="@dimen/micloud_intro_margin_h"
            android:layout_marginRight="@dimen/micloud_intro_margin_h"
            android:text="@string/micloud_intro_02_part_02"
            style="@style/MiCloudIntro02Part2"
            />
    </LinearLayout>
</RelativeLayout>