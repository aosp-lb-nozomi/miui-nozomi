<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/content_horizontal_margin"
                android:paddingRight="@dimen/content_horizontal_margin"
                android:paddingTop="@dimen/content_horizontal_margin"
                android:paddingBottom="@dimen/content_bottom_margin"
        >
    <include
            android:id="@+id/bottom_panel"
            layout="@layout/micloud_steps_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            />
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/bottom_panel"
            android:scrollbarStyle="outsideInset"
            >
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_adjust_margin_h"
                    android:text="@string/micloud_input_password_prompt"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="?android:textColorSecondary"
                    />
            <EditText
                    android:id="@+id/ev_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/title_content_margin_v"
                    android:minHeight="@dimen/editor_height"
                    android:hint="@string/input_password_hint"
                    android:password="true"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:maxLength="16"
                    android:inputType="textVisiblePassword"
                    android:background="@drawable/group_first_item_normal_bg"
                    />
            <EditText
                    android:id="@+id/ev_password_confirm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/editor_height"
                    android:hint="@string/micloud_password_confirm_hint"
                    android:password="true"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:maxLength="16"
                    android:inputType="textVisiblePassword"
                    android:background="@drawable/group_last_item_normal_bg"
                    />
            <CheckBox
                    android:id="@+id/show_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_password"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/title_content_margin_v"
                    android:layout_marginLeft="@dimen/text_adjust_margin_h"
                    android:layout_marginRight="@dimen/text_adjust_margin_h"
                    android:text="@string/micloud_password_req_notice"
                    android:textColor="?android:textColorSecondary"
                    />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>