<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:key="pref_micloud_userbaseinfo"
            android:title="@string/micloud_user_base_info">
            <miui.preference.ValuePreference
                android:key="pref_micloud_username"
                android:title="@string/micloud_user_name"
                />
            <miui.preference.ValuePreference
                android:key="pref_micloud_useremail"
                android:title="@string/micloud_user_email"
                />
            <miui.preference.ValuePreference
                android:key="pref_micloud_userphone"
                android:title="@string/micloud_user_phone"
                />
            <miui.preference.ValuePreference
                android:key="pref_micloud_userid"
                android:title="@string/micloud_user_id"
                />
    </PreferenceCategory>

    <PreferenceCategory
            android:key="pref_micloud_storagespace"
            android:title="@string/micloud_storage_space">
            <miui.preference.ValuePreference
                android:key="pref_micloud_userspaceusage"
                android:title="@string/micloud_user_space_usage"
                />
    </PreferenceCategory>

</PreferenceScreen>