<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/content_horizontal_margin"
                android:paddingRight="@dimen/content_horizontal_margin"
                android:paddingBottom="@dimen/content_bottom_margin"
        >
    <Button
            android:id="@+id/btn_finish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/completed"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            />
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/btn_finish"
            android:orientation="vertical"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="141dp"
                android:src="@drawable/ic_notice"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/micloud_active_email_sent_1"
                style="@style/TextPrimary"
                />
        <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/lines_margin_v"
                style="@style/WarnTitleText"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/micloud_active_email_sent_2"
                android:layout_marginTop="@dimen/lines_margin_v"
                style="@style/TextPrimary"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lines_margin_v"
                android:text="@string/micloud_click_email"
                android:layout_gravity="center_horizontal"
                style="@style/TextPrimary"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lines_margin_v"
                android:text="@string/micloud_account"
                android:layout_gravity="center_horizontal"
                style="@style/TextPrimary"
                />
    </LinearLayout>
</RelativeLayout>