<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Main" parent="miui:style/V5.Theme.Light">
    </style>
    <style name="Theme.Dialog" parent="miui:style/V5.Theme.Light.Dialog.NoTitle">
    </style>
    <style name="Theme.NoDisplay" parent="miui:style/V5.Theme.NoDisplay">
    </style>
    <style name="Theme.Settings" parent="miui:style/V5.Theme.Light.Settings">
    </style>
    <style name="HyperLinkStyle" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/hyperlink_text_color</item>
    </style>
    <style name="GrayTextStyle" parent="android:style/TextAppearance.Medium">
        <item name="android:textColor">#7d000000</item>
    </style>
    <style name="DialogTitleStyle" parent="@miui:style/V5.Widget.DialogTitle">
    </style>
    <style name="WarnTitleText">
        <item name="android:textColor">@color/text_color_warn_title</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextPrimary">
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_primary</item>
    </style>
    <style name="TextPrimary.Reverse">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_primary</item>
    </style>
    <style name="TextPrimary.Highlight">
        <item name="android:textColor">@color/text_color_red</item>
        <item name="android:textColorLink">@color/text_color_red</item>
    </style>
    <style name="BlankWarnTitleText" parent="WarnTitleText">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="LoginErrorNoticeAppearance" parent="@miui:style/V5.TextAppearance">
        <item name="android:textColor">@color/text_color_warn</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="LoginNormalNoticeAppearance" parent="@miui:style/V5.TextAppearance">
        <item name="android:textColor">@miui:color/v5_secondary_text_color_light</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="LoginInfoNoticeAppearance" parent="@miui:style/V5.TextAppearance">
        <item name="android:textColor">@color/text_color_notice</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="PrivacyPolicy">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_button</item>
        <item name="android:textColor">@color/hyper_area_text_color</item>
    </style>
    <style name="ArrowIndicator">
        <item name="android:src">@miui:drawable/v5_arrow_right</item>
    </style>
    <style name="SyncStatus">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_list_secondary</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TitleDsptText">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_list_secondary</item>
    </style>
    <style name="TitleDsptText.Highlight" parent="@TitleDsptText">
        <item name="android:textColor">@color/text_color_red</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_list_secondary</item>
    </style>
    <style name="ButtonLogin">
        <item name="android:background">@miui:drawable/v5_btn_bg_positive_warn_light</item>
        <item name="android:textColor">@miui:color/v5_button_text_dark</item>
    </style>
    <style name="RadioButton">
        <item name="android:background">@miui:drawable/v5_preference_item_bg</item>
    </style>
    <style name="ButtonRemove">
        <item name="android:background">@miui:drawable/v5_btn_bg_negative_warn_light</item>
        <item name="android:textColor">@miui:color/v5_button_text_dark</item>
    </style>
    <style name="ButtonNormal" parent="@miui:style/V5.Widget.Button">
    </style>
    <style name="ButtonNormal.Reverse" parent="@style/ButtonNormal">
        <item name="android:textColor">@color/text_color_white</item>
    </style>
    <style name="ButtonNotice" parent="@miui:style/V5.Widget.Button.PositiveWarn">
    </style>
    <style name="Divider" parent="@miui:style/V5.Widget.BottomBar.TopLine">
    </style>
    <style name="ListItemPrimary" parent="@miui:style/V5.TextAppearance.List.Primary"/>
    <style name="ListItemSecondary" parent="@miui:style/V5.TextAppearance.List.Secondary"/>
    <style name="FakeEditView">
        <item name="android:background">?miui:attr/v5_edit_text_bg</item>
    </style>
    <style name="RechargeItem" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine" />
    <style name="RecordItem" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine" />
    <style name="Spinner">
        <item name="android:background">@miui:drawable/v5_spinner_bg_light</item>
    </style>
    <style name="WeiBo.ButtonUpdateContacts" parent="ButtonLogin">
    </style>
    <style name="ContentPadding">
        <item name="android:paddingLeft">@dimen/content_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/content_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/content_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/content_horizontal_margin</item>
    </style>
    <style name="TextAppearance.WeiBo" parent="miui:style/V5.TextAppearance">
    </style>
    <style name="TextAppearance.WeiBo.Description" parent="TextAppearance.WeiBo">
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="TextAppearance.WeiBo.Primary" parent="TextAppearance.WeiBo">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TitleStyle">
        <item name="android:textColor">@miui:color/v5_title_text_dark</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_title_bar_secondary_medium</item>
    </style>
    <style name="UserNameStyle">
        <item name="android:textColor">@miui:color/v5_title_text_dark</item>
        <item name="android:textSize">@dimen/micloud_settings_user_id_text_size</item>
    </style>
    <style name="Theme.NoTitle" parent="@style/Theme.Main">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="Theme.MiCloudEntrance" parent="@style/Theme.NoTitle">
        <item name="android:windowBackground">@drawable/user_detail_info_bg</item>
    </style>
    <style name="ActionBarStyle.ShowCustom" parent="@miui:V5.Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:background">@drawable/micloud_settings_title_bg</item>
        <item name="android:height">@dimen/micloud_settings_title_height</item>
    </style>
    <style name="Theme.Settings.MiCloudSettings" parent="miui:style/V5.Theme.Light.Settings">
        <item name="android:actionBarStyle">@style/ActionBarStyle.ShowCustom</item>
    </style>
    <style name="MiCloudDspt" parent="TextPrimary.Reverse">
        <item name="android:textColor">@color/micloud_dspt</item>
    </style>
    <style name="UserDetailName">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="UserDetailBindInfo">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_medium</item>
    </style>
    <style name="MiCloudIntro01Part1">
        <item name="android:textSize">@dimen/micloud_intro_01_text_size</item>
        <item name="android:textColor">@color/micloud_intro_01</item>
    </style>
    <style name="MiCloudIntro01Part2">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_medium</item>
        <item name="android:textColor">@color/micloud_intro_01</item>
    </style>
    <style name="MiCloudIntro02Part1">
        <item name="android:textSize">@dimen/micloud_intro_02_text_size</item>
        <item name="android:textColor">@color/micloud_intro_02</item>
    </style>
    <style name="MiCloudIntro02Part2">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_medium</item>
        <item name="android:textColor">@color/micloud_intro_02</item>
    </style>
    <style name="MiCloudIntro03Part1">
        <item name="android:textSize">@dimen/micloud_intro_03_text_size</item>
        <item name="android:textColor">@color/micloud_intro_03</item>
    </style>
    <style name="MiCloudIntro03Part2">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_medium</item>
        <item name="android:textColor">@color/micloud_intro_03</item>
    </style>
    <style name="Theme.ActionBarTab" parent="@miui:style/V5.Theme.Light.ActionBar.NoTitle">
        <item name="miui:v5_action_bar_tab">true</item>
    </style>
    <style name="TextAppearance.Warn" parent="miui:style/V5.TextAppearance.Title.Medium.Secondary">
        <item name="android:shadowColor">@null</item>
        <item name="android:textColor">@color/text_color_orange</item>
        <item name="android:textColorLink">@color/text_color_orange</item>
    </style>
</resources>
