<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@miui:dimen/v5_list_view_padding_horizontal"
    android:paddingRight="@miui:dimen/v5_list_view_padding_horizontal"
    android:paddingBottom="@miui:dimen/v5_list_view_padding_horizontal" >

    <Button
        android:id="@+id/bt_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_sound" />

    <ImageView
        android:id="@+id/iv_2dcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>