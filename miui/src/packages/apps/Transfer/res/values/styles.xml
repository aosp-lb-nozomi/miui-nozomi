<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="tip1">
        <item name="android:textSize">@dimen/tip1</item>
    </style>
    <style name="tip2">
        <item name="android:textSize">@dimen/tip2</item>
    </style>
    <style name="FileBrowseListStyle" parent="@miui:style/V5.Widget.ListView">
    </style>
    <style name="ActionBar.ShowCustom" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="white_shadow">
        <item name="android:shadowColor">#55000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="progress_horizontal" parent="@miui:V5.Widget.ProgressBar.Horizontal">
        <item name="miui:progressBar">@null</item>
        <item name="miui:progressBarMask">@null</item>
    </style>
    <style name="progress_connect" parent="@miui:V5.Widget.ProgressBar">
        <item name="android:background">@drawable/progress_bar_connect_bg</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar_connect_anim</item>
    </style>
    
    <!-- MiShare style -->
    <style name="BottomButtonBarStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/gray</item>
    </style>

    <style name="BottomButtonBarItemStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">3dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_bottom_button_bar_item</item>
        <item name="android:textSize">12sp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="CategoryButtonIconStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dip</item>
    </style>

    <style name="CategoryButtonContainerStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">onClick</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dip</item>
    </style>

    <style name="CategoryButtonTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12dip</item>
    </style>
</resources>
