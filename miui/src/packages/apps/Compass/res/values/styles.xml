<resources>

    <style name="TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#B2FFFFFF</item>
    </style>

     <style name="TextAppearance.text_unit" parent="TextAppearance">
        <item name="android:layout_gravity">top</item>
        <item name="android:textSize">18px</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:layout_marginLeft">1.5dip</item>
    </style>

    <style name="TextAppearance.text_title_sign" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_title_sign_size</item>
        <item name="android:textColor">#99FFFFFF</item>
    </style>

    <style name="BottomUnitStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CompassTheme" parent="@miui:style/V5.Theme.Light.NoTitle">
        <item name="android:windowBackground">@miui:drawable/v5_window_bg_dark</item>
    </style>
</resources>
